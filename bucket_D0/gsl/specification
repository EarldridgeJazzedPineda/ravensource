DEF[PORTVERSION]=	2.8
DEF[SOMAJOR]=		28
DEF[SOMINOR]=		0.0
# ----------------------------------------------------------------------------

NAMEBASE=		gsl
VERSION=		${PORTVERSION}
KEYWORDS=		math
VARIANTS=		std
SDESC[std]=		GNU Scientific Library - mathematical libs
HOMEPAGE=		http://www.gnu.org/software/gsl
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		GNU/gsl
DISTFILE[1]=		gsl-${PORTVERSION}.tar.gz:main

SPKGS[std]=		set primary tools man dev info

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		GPLv3+:primary
LICENSE_FILE=		GPLv3+:{{WRKSRC}}/COPYING
LICENSE_TERMS=		primary:{{WRKDIR}}/TERMS
LICENSE_SOURCE=		TERMS:{{WRKSRC}}/gsl_types.h
LICENSE_AWK=		TERMS:"^$$"
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		math/gsl

USES=			libtool makeinfo
MUST_CONFIGURE=		gnu
CONFIGURE_ENV=		MAKEINFO='makeinfo --no-split'
INSTALL_TARGET=		install-strip
INFO=			info:gsl-ref
PLIST_SUB=		SOMAJOR=${SOMAJOR}
			SOMINOR=${SOMINOR}

EXRUN[tools]=		primary
