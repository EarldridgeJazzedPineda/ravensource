NAMEBASE=		popt
VERSION=		${PORTVERSION}
KEYWORDS=		devel
VARIANTS=		standard
SDESC[standard]=	Command line option parsing library
HOMEPAGE=		http://freshmeat.net/projects/popt/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		http://ftp.rpm.org/popt/releases/popt-1.x/
			https://fossies.org/linux/misc/
