FPC_EQUIVALENT=		devel/popt

USES=			cpe iconv libtool fbsd10fix
CPE_VENDOR=		popt_project
INSTALL_TARGET=		install-strip
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		--disable-nls
SOVERSION=		${SOVERSION}
