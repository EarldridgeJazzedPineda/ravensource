DEF[PORTVERSION]=	3.29.0
DEF[LONGVERSION]=	${PORTVERSION:S/.//:S/./0/}00
# ----------------------------------------------------------------------------

NAMEBASE=		sqlite
VERSION=		${PORTVERSION}
KEYWORDS=		databases
VARIANTS=		standard editline
# variants only affect sqlite binary (history not linked to library)
SDESC[standard]=	SQL database engine library (GNU/readline)
SDESC[editline]=	SQL database engine library (BSD/editline)
HOMEPAGE=		https://www.sqlite.org/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		https://www.sqlite.org/2019/
			http://www2.sqlite.org/2019/
			http://www3.sqlite.org/2019/
DISTFILE[1]=		sqlite-autoconf-${LONGVERSION}.tar.gz:main

SPKGS[standard]=	single
SPKGS[editline]=	single

OPTIONS_AVAILABLE=	EDITLINE SKIP_READLINE
OPTIONS_STANDARD=	none
VOPTS[editline]=	EDITLINE=ON SKIP_READLINE=ON

LICENSE=		PUBDOM:single
LICENSE_FILE=		PUBDOM:{{WRKDIR}}/LICENSE
LICENSE_AWK=		PUBDOM:"\*\*\*\*\*"
LICENSE_SOURCE=		PUBDOM:{{WRKSRC}}/sqlite3.h
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		databases/sqlite3

USES=			libtool ncurses
DISTNAME=		sqlite-autoconf-${LONGVERSION}
MUST_CONFIGURE=		gnu
INSTALL_TARGET=		install-strip
SINGLE_JOB=		yes

CPPFLAGS=		-DSQLITE_ENABLE_DBSTAT_VTAB=1
			-DSQLITE_ENABLE_FTS3
			-DSQLITE_ENABLE_FTS3_TOKENIZER=1
			-DSQLITE_ENABLE_FTS3_PARENTHESIS=1
			-DSQLITE_ENABLE_FTS4=1
			-DSQLITE_ENABLE_COLUMN_METADATA=1
			-DSQLITE_SECURE_DELETE=1
			-DSQLITE_ENABLE_UNLOCK_NOTIFY=1
			-DSQLITE_USE_URI=1
			-DSQLITE_TEMP_STORE=2
CONFIGURE_ARGS=		--enable-dynamic-extensions
			--enable-static-shell
			--enable-threadsafe
LDFLAGS=		-lpthread

[EDITLINE].DESCRIPTION=			Build with editline shell history
[EDITLINE].CONFIGURE_ARGS_ON=		--enable-editline
[EDITLINE].BUILDRUN_DEPENDS_ON=		libedit:single:standard

[SKIP_READLINE].DESCRIPTION=		Don't build with readline shell history
[SKIP_READLINE].CONFIGURE_ARGS_ON=	--disable-readline
[SKIP_READLINE].CONFIGURE_ARGS_OFF=	--enable-readline
[SKIP_READLINE].USES_OFF=		readline


post-install:
	${RM} ${STAGEDIR}${PREFIX}/include/msvc.h
