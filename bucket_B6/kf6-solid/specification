DEF[PORTVERSION]=	EXTRACT_INFO(KDE6_FRAMEWORKS_VERSION)
# ----------------------------------------------------------------------------

NAMEBASE=		kf6-solid
VERSION=		${PORTVERSION}
KEYWORDS=		devel
VARIANTS=		standard
SDESC[standard]=	KF6 hardware integration and detection
HOMEPAGE=		https://api.kde.org/frameworks/solid/html/index.html
CONTACT=		Michael_Reim[kraileth@elderlinux.org]

DOWNLOAD_GROUPS=	main
SITES[main]=		https://download.kde.org/stable/frameworks/${PORTVERSION:R}/
DISTFILE[1]=		solid-${PORTVERSION}.tar.xz:main
DIST_SUBDIR=		kde6

SPKGS[standard]=	complete primary tools dev nls

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		LGPL21:primary
			LGPL21+:primary
			LGPL3:primary
LICENSE_FILE=		LGPL21:{{WRKSRC}}/LICENSES/LGPL-2.1-only.txt
			LGPL21+:{{WRKSRC}}/LICENSES/LGPL-2.1-or-later.txt
			LGPL3:{{WRKSRC}}/LICENSES/LGPL-3.0-only.txt
LICENSE_TERMS=		primary:{{WRKDIR}}/TERMS
LICENSE_SCHEME=		multi

FPC_EQUIVALENT=		devel/kf6-solid

BUILD_DEPENDS=		kf6-extra-cmake-modules:primary:standard
			qt6-qtbase:dev:standard
			qt6-qttools:dev:standard
BUILDRUN_DEPENDS=	qt6-qtbase:primary:standard
			qt6-qttools:primary:standard

EXRUN[tools]=		primary

USES=			bison cmake

DISTNAME=		solid-${PORTVERSION}
CMAKE_ARGS=		-DCMAKE_PREFIX_PATH:PATH={{PREFIX}}/lib/qt6/cmake
SOVERSION=		${PORTVERSION}

R_DEPS[freebsd]=	bsdisks:primary:standard

post-extract:
	${ECHO} "Terms extracted from 'src/tools/solid-power/main.cpp':" > ${WRKDIR}/TERMS
	${SED} -n '/include/!p;//q' ${WRKSRC}/src/tools/solid-power/main.cpp >> \
		${WRKDIR}/TERMS
	${ECHO} "Terms extracted from 'src/imports/devices.h':" >> ${WRKDIR}/TERMS
	${SED} -n '/ifndef/!p;//q' ${WRKSRC}/src/tools/solid-hardware/solid-hardware.h >> ${WRKDIR}/TERMS

post-stage:
	(cd ${STAGEDIR}${PREFIX} && ${STRIP_CMD} bin/solid-hardware6 \
		lib/libKF6Solid.so)
