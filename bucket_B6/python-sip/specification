NAMEBASE=		python-sip
VERSION=		${PORTVERSION}
KEYWORDS=		python
VARIANTS=		v11 v12
SDESC[v11]=		Bindings generator for C/C++ libraries (3.11)
SDESC[v12]=		Bindings generator for C/C++ libraries (3.12)
HOMEPAGE=		https://www.riverbankcomputing.com/software/sip/
CONTACT=		Python_Automaton[python@ironwolf.systems]

DOWNLOAD_GROUPS=	main
SITES[main]=		PYPI/s/sip
DISTFILE[1]=		sip-${PORTVERSION}.tar.gz:main

SPKGS[v11]=		single
SPKGS[v12]=		single

OPTIONS_AVAILABLE=	PY311 PY312
OPTIONS_STANDARD=	none
VOPTS[v11]=		PY311=ON PY312=OFF
VOPTS[v12]=		PY311=OFF PY312=ON

# License listed at PyPI
# SIP

GENERATED=		yes
DISTNAME=		sip-${PORTVERSION}

# install_requires extracted from setup.py
# packaging
# ply
# setuptools
# tomli; python_version < "3.11"

[PY311].USES_ON=			python:v11,sutools
[PY311].BUILDRUN_DEPENDS_ON=		python-packaging:single:v11
					python-ply:single:v11
					python-setuptools:single:v11
					python-tomli; python_version:single:v11
[PY312].USES_ON=			python:v12,sutools
[PY312].BUILDRUN_DEPENDS_ON=		python-packaging:single:v12
					python-ply:single:v12
					python-setuptools:single:v12
					python-tomli; python_version:single:v12

