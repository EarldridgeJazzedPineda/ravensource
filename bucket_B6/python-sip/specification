NAMEBASE=		python-sip
VERSION=		${PORTVERSION}
KEYWORDS=		python
VARIANTS=		py39 py310
SDESC[py39]=		Bindings generator for C/C++ libraries (3.9)
SDESC[py310]=		Bindings generator for C/C++ libraries (3.10)
HOMEPAGE=		https://www.riverbankcomputing.com/software/sip/
CONTACT=		Python_Automaton[python@ironwolf.systems]

DOWNLOAD_GROUPS=	main
SITES[main]=		PYPI/s/sip
DISTFILE[1]=		sip-${PORTVERSION}.tar.gz:main

SPKGS[py39]=		single
SPKGS[py310]=		single

OPTIONS_AVAILABLE=	PY39 PY310
OPTIONS_STANDARD=	none
VOPTS[py39]=		PY39=ON PY310=OFF
VOPTS[py310]=		PY39=OFF PY310=ON

# License listed at PyPI
# SIP

GENERATED=		yes
DISTNAME=		sip-${PORTVERSION}

# install_requires extracted from setup.py
# packaging
# ply
# setuptools
# toml

[PY39].USES_ON=				python:py39,sutools
[PY39].BUILDRUN_DEPENDS_ON=		python-packaging:single:py39
					python-ply:single:py39
					python-setuptools:single:py39
					python-toml:single:py39
[PY310].USES_ON=			python:py310,sutools
[PY310].BUILDRUN_DEPENDS_ON=		python-packaging:single:py310
					python-ply:single:py310
					python-setuptools:single:py310
