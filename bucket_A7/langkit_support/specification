DEF[PORTVERSION]=	21.0.0
DEF[BUILD_MODE]=	prod
# ----------------------------------------------------------------------------

NAMEBASE=		langkit_support
VERSION=		${PORTVERSION}
KEYWORDS=		ada devel
VARIANTS=		standard
SDESC[standard]=	Support files for Ada Langkit
HOMEPAGE=		https://github.com/AdaCore/langkit
CONTACT=		John_Marino[draco@marino.st]

DOWNLOAD_GROUPS=	main
SITES[main]=		https://github.com/AdaCore/langkit/releases/download/v${PORTVERSION}/
DISTFILE[1]=		langkit_support-${PORTVERSION}.tar.gz:main

SPKGS[standard]=	single

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

BUILD_DEPENDS=		gnatcoll-core:primary:standard
			gnatcoll-bindings:iconv:standard

LICENSE=		GPLv3+:single GPLv3RLE:single
LICENSE_TERMS=		single:{{WRKDIR}}/TERMS
LICENSE_FILE=		GPLv3+:{{WRKSRC}}/COPYING3
			GPLv3RLE:{{WRKSRC}}/COPYING.RUNTIME
LICENSE_AWK=		TERMS:"^$$"
LICENSE_SOURCE=		TERMS:{{WRKSRC}}/src/langkit_support.ads
LICENSE_SCHEME=		multi

USES=			gprbuild
INSTALL_REQ_TOOLCHAIN=	yes

do-build:
	(cd ${WRKSRC} && ${SETENV} ${MAKE_ENV} \
		gprbuild -p -P langkit_support.gpr\
		-XBUILD_MODE="${BUILD_MODE}")

do-install:
	(cd ${WRKSRC} && ${SETENV} ${MAKE_ENV} \
		gprinstall -p -P langkit_support.gpr\
		--prefix=${STAGEDIR}${PREFIX}\
		-XBUILD_MODE="${BUILD_MODE}")
	${RM} -r ${STAGEDIR}${PREFIX}/share/gpr/manifests
