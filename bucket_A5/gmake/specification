DEF[PORTVERSION]=	4.2.1
# ----------------------------------------------------------------------------

NAMEBASE=		gmake
VERSION=		${PORTVERSION}
KEYWORDS=		devel
VARIANTS=		standard nls
SDESC[standard]=	GNU variant of 'make' utility
SDESC[nls]=		GNU make with native language support
HOMEPAGE=		https://www.gnu.org/software/make/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		GNU/make
DISTFILE[1]=		make-${PORTVERSION}.tar.bz2:main

SPKGS[standard]=	single
SPKGS[nls]=		single

OPTIONS_AVAILABLE=	NLS
OPTIONS_STANDARD=	none
VOPTS[nls]=		NLS=ON

USES=			cpe
CPE_VENDOR=		gnu

DISTNAME=		make-${PORTVERSION}
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		--program-prefix=g --without-guile
INFO=			single:make

LICENSE=		GPLv3:single
LICENSE_FILE=		GPLv3:{{WRKSRC}}/COPYING
LICENSE_SCHEME=		solo

[NLS].USES_ON=				gettext-runtime
[NLS].CONFIGURE_ARGS_ON=		{{ICONV_CONFIGURE_ARG}}
					--with-libintl-prefix={{LOCALBASE}}
[NLS].CONFIGURE_ENABLE_BOTH=		nls
