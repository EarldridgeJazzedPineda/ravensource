# don't commit upgrade without testing filezilla build first
DEF[PORTVERSION]=	0.20.2
DEF[SOVERSION]=		4.1.0
# ----------------------------------------------------------------------------

NAMEBASE=		libfilezilla
VERSION=		${PORTVERSION}
REVISION=		1
KEYWORDS=		ftp
VARIANTS=		standard
SDESC[standard]=	C++ lib for building platform-independent programs
HOMEPAGE=		https://lib.filezilla-project.org
CONTACT=		Michael_Reim[kraileth@elderlinux.org]

DOWNLOAD_GROUPS=	main
SITES[main]=		https://download.filezilla-project.org/libfilezilla/
DISTFILE[1]=		libfilezilla-${PORTVERSION}.tar.bz2:main

SPKGS[standard]=	single

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		GPLv2+:single
LICENSE_FILE=		GPLv2+:{{WRKSRC}}/COPYING
LICENSE_TERMS=		single:{{WRKDIR}}/TERMS
LICENSE_AWK=		TERMS:"^Documentation"
LICENSE_SOURCE=		TERMS:{{WRKSRC}}/README
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		ftp/libfilezilla

BUILD_DEPENDS=		gmp:static:standard
BUILDRUN_DEPENDS=	gnutls:primary:standard
			nettle:primary:standard
USES=			c++:single gettext-tools gmake iconv:wchar_t libtool pkgconfig
MUST_CONFIGURE=		gnu
INSTALL_TARGET=		install-strip

SOVERSION=		${SOVERSION}
