DEF[PORTVERSION]=	1.3.5
DEF[XNAME]=		xext
DEF[ALTNAME]=		libXext
# ----------------------------------------------------------------------------

NAMEBASE=		xorg-${XNAME}
VERSION=		${PORTVERSION}
REVISION=		1
KEYWORDS=		x11
VARIANTS=		standard
SDESC[standard]=	X11 Extension library
HOMEPAGE=		https://www.x.org/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		XORG/individual/lib
DISTFILE[1]=		${ALTNAME}-${PORTVERSION}.tar.xz:main
DIST_SUBDIR=		xorg

SPKGS[standard]=	complete primary dev man

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		MIT:primary
LICENSE_FILE=		MIT:{{WRKSRC}}/COPYING
LICENSE_SCHEME=		solo

EXRUN[dev]=		xorg-x11:dev:standard
			xorg-xau:dev:standard

USES=			cpe libtool
XORG_COMPONENTS=	x11 xau
DISTNAME=		${ALTNAME}-${PORTVERSION}
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		--disable-specs
			--without-xmlto
INSTALL_TARGET=		install-strip
CPE_PRODUCT=		libxext
CPE_VENDOR=		x
FPC_EQUIVALENT=		x11/libXext

post-patch-sunos:
	${REINPLACE_CMD} -e '/SOREV=0/d' ${WRKSRC}/configure
