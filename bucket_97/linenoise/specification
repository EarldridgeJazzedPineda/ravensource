DEF[PORTVERSION]=	1.0
# ----------------------------------------------------------------------------

NAMEBASE=		linenoise
VERSION=		${PORTVERSION}
KEYWORDS=		devel
VARIANTS=		standard
SDESC[standard]=	Minimal replacement for readline
HOMEPAGE=		https://github.com/antirez/linenoise
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		GITHUB/antirez:linenoise:${PORTVERSION}
DISTFILE[1]=		generated:main

SPKGS[standard]=	single

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		BSD2CLAUSE:single
LICENSE_FILE=		BSD2CLAUSE:{{WRKSRC}}/LICENSE
LICENSE_SCHEME=		solo

do-build:
	cd ${WRKSRC} &&\
	${CC} -fpic -DPIC -c linenoise.c &&\
	${AR} cq liblinenoise.a linenoise.o &&\
	ranlib liblinenoise.a

do-install:
	${INSTALL_DATA} ${WRKSRC}/linenoise.h ${STAGEDIR}${PREFIX}/include/
	${INSTALL_LIB} ${WRKSRC}/liblinenoise.a ${STAGEDIR}${PREFIX}/lib/
