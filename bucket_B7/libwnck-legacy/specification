DEF[PORTVERSION]=	2.31.0
DEF[SOVERSION]=		22.4.0
# ----------------------------------------------------------------------------

NAMEBASE=		libwnck-legacy
VERSION=		${PORTVERSION}
KEYWORDS=		x11
VARIANTS=		standard
SDESC[standard]=	GNOME2 window navigator construction kit library
HOMEPAGE=		https://developer.gnome.org/libwnck
CONTACT=		Michael_Reim[kraileth@elderlinux.org]

DOWNLOAD_GROUPS=	main
SITES[main]=		http://ftp.gnome.org/pub/GNOME/sources/libwnck/${PORTVERSION:R}/
DISTFILE[1]=		libwnck-${PORTVERSION}.tar.xz:main

SPKGS[standard]=	complete primary docs nls

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

FPC_EQUIVALENT=		x11-toolkits/libwnck

LICENSE=		LGPL20+:complete
LICENSE_FILE=		LGPL20+:{{WRKSRC}}/COPYING
LICENSE_SCHEME=		solo
LICENSE_TERMS=		complete:{{WRKDIR}}/TERMS

BUILDRUN_DEPENDS=	startup-notification:single:standard
USES=			bison fbsd10fix gettext-runtime gettext-tools:build gmake libtool pkgconfig
XORG_COMPONENTS=	xres x11
GNOME_COMPONENTS=	gtk2 intltool introspection
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		--disable-tools
			--with-html-dir={{PREFIX}}/share/doc
DISTNAME=		libwnck-${PORTVERSION}
INSTALL_TARGET=		install-strip

SOVERSION=		${SOVERSION}

post-patch:
	${HEAD} -n 19 ${WRKSRC}/libwnck/libwnck.h \
		| ${TAIL} -n 17 > ${WRKDIR}/TERMS
