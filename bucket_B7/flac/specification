DEF[PORTVERSION]=	1.4.3
DEF[SOVERSION]=		12.1.0
DEF[CXX_SOVERSION]=	10.0.1
# ----------------------------------------------------------------------------

NAMEBASE=		flac
VERSION=		${PORTVERSION}
REVISION=		3
KEYWORDS=		audio
VARIANTS=		standard
SDESC[standard]=	Free Lossless Audio Codec
HOMEPAGE=		https://xiph.org/flac/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		http://downloads.xiph.org/releases/flac/
DISTFILE[1]=		flac-${PORTVERSION}.tar.xz:main

SPKGS[standard]=	complete primary cxx tools dev docs

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		CUSTOM1:primary
			GPLv2:primary
			LGPL21:primary
			GFDL:primary
LICENSE_NAME=		CUSTOM1:"FLAC Library BSD-like License"
LICENSE_TERMS=		primary:{{WRKDIR}}/LICENSE
LICENSE_FILE=		GFDL:{{WRKSRC}}/COPYING.FDL
			GPLv2:{{WRKSRC}}/COPYING.GPL
			LGPL21:{{WRKSRC}}/COPYING.LGPL
			CUSTOM1:{{WRKSRC}}/COPYING.Xiph
LICENSE_AWK=		TERMS:"^========="
LICENSE_SOURCE=		TERMS:{{WRKSRC}}/README.md
LICENSE_SCHEME=		multi

FPC_EQUIVALENT=		audio/flac

BUILD_DEPENDS=		doxygen:primary:standard
			libogg:dev:standard
BUILDRUN_DEPENDS=	libogg:primary:standard

EXRUN[tools]=		flac:primary:standard
EXRUN[cxx]=		flac:primary:standard
EXRUN[dev]=		libogg:dev:standard

USES=			cpe iconv libtool pkgconfig mbsdfix c++:cxx
CPE_VENDOR=		flac_project
INSTALL_REQ_TOOLCHAIN=	yes
INSTALL_TARGET=		install-strip
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		--enable-static
			--disable-sse
			--with-ogg="{{LOCALBASE}}"
			--disable-thorough-tests
			--disable-xmms-plugin
SOVERSION=		${SOVERSION}
PLIST_SUB=		CXX_SOMAJOR=${CXX_SOVERSION:R:R}
			CXX_SOVERSION=${CXX_SOVERSION}

post-install:
	# manpages are blank, requires pandoc
	${RM} ${STAGEDIR}${MANPREFIX}/man/man1/*.1
