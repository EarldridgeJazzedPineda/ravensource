DEF[PORTVERSION]=	1.3.3
# ----------------------------------------------------------------------------

NAMEBASE=		flac
VERSION=		${PORTVERSION}
REVISION=		1
KEYWORDS=		audio
VARIANTS=		standard
SDESC[standard]=	Free Lossless Audio Codec
HOMEPAGE=		https://xiph.org/flac/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		http://downloads.xiph.org/releases/flac/
DISTFILE[1]=		flac-${PORTVERSION}.tar.xz:main

SPKGS[standard]=	complete primary docs

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		CUSTOM1:primary
			GPLv2:primary
			LGPL21:primary
			GFDL:primary
LICENSE_NAME=		CUSTOM1:"FLAC Library BSD-like License"
LICENSE_TERMS=		primary:{{WRKDIR}}/LICENSE
LICENSE_FILE=		GFDL:{{WRKSRC}}/COPYING.FDL
			GPLv2:{{WRKSRC}}/COPYING.GPL
			LGPL21:{{WRKSRC}}/COPYING.LGPL
			CUSTOM1:{{WRKSRC}}/COPYING.Xiph
LICENSE_AWK=		TERMS:"^========="
LICENSE_SOURCE=		TERMS:{{WRKSRC}}/README
LICENSE_SCHEME=		multi

FPC_EQUIVALENT=		audio/flac

BUILDRUN_DEPENDS=	libogg:primary:standard

USES=			iconv libtool pkgconfig c++:primary
INSTALL_REQ_TOOLCHAIN=	yes
INSTALL_TARGET=		install-strip
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		--enable-static
			--disable-sse
			--with-ogg="{{LOCALBASE}}"
			--disable-doxygen-docs
			--disable-thorough-tests
			--disable-xmms-plugin

post-install:
	${REINPLACE_CMD} -i'' -e 's:%%PREFIX%%:${PREFIX}:' \
	    ${STAGEDIR}${MANPREFIX}/man/man1/flac.1
