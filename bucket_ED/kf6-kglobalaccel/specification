DEF[PORTVERSION]=	6.0.0
# ----------------------------------------------------------------------------

NAMEBASE=		kf6-kglobalaccel
VERSION=		${PORTVERSION}
KEYWORDS=		x11
VARIANTS=		standard
SDESC[standard]=	KF6 lib supporting global workspace shortcuts
HOMEPAGE=		https://api.kde.org/frameworks/kglobalaccel/html/index.html
CONTACT=		Michael_Reim[kraileth@elderlinux.org]

DOWNLOAD_GROUPS=	main
SITES[main]=		https://download.kde.org/stable/frameworks/${PORTVERSION:R}/
DISTFILE[1]=		kglobalaccel-${PORTVERSION}.tar.xz:main
DIST_SUBDIR=		kde6

SPKGS[standard]=	complete primary dev nls

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		LGPL20+:primary
LICENSE_FILE=		LGPL20+:{{WRKSRC}}/LICENSES/LGPL-2.0-or-later.txt
LICENSE_TERMS=		primary:{{WRKDIR}}/TERMS
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		x11/kf6-kglobalaccel

BUILD_DEPENDS=		kf6-extra-cmake-modules:primary:standard
			kf6-kconfig:dev:standard
			kf6-kcoreaddons:dev:standard
			kf6-kwindowsystem:dev:standard
			kf6-kcrash:dev:standard
			kf6-kdbusaddons:dev:standard
			kf6-ki18n:dev:standard
			kf6-kservice:dev:standard
			qt6-qtbase:dev:standard
			qt6-qtdeclarative:dev:standard
			qt6-qttools:dev:standard
BUILDRUN_DEPENDS=	kf6-kconfig:primary:standard
			kf6-kcoreaddons:primary:standard
			kf6-kcrash:primary:standard
			kf6-kdbusaddons:primary:standard
			kf6-ki18n:primary:standard
			kf6-kservice:primary:standard
			kf6-kwindowsystem:primary:standard
			qt6-qtbase:primary:standard
			qt6-qtdeclarative:primary:standard
			qt6-qttools:primary:standard

USES=			cmake
XORG_COMPONENTS=	x11 xcb xcb-util-keysyms
DISTNAME=		kglobalaccel-${PORTVERSION}
CMAKE_ARGS=		-DCMAKE_PREFIX_PATH:PATH={{PREFIX}}/lib/qt6/cmake
SOVERSION=		${PORTVERSION}

post-extract:
	${ECHO} "Terms extracted from 'src/kglobalaccel.h':" > ${WRKDIR}/TERMS
	${SED} -n '/ifndef/!p;//q' ${WRKSRC}/src/kglobalaccel.h >> ${WRKDIR}/TERMS

post-stage:
	${STRIP_CMD} ${STAGEDIR}${PREFIX}/lib/libKF6GlobalAccel.so
