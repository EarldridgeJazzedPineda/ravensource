DEF[PORTVERSION]=	2.0.0
# ----------------------------------------------------------------------------

NAMEBASE=		termbox2
VERSION=		${PORTVERSION}
KEYWORDS=		devel
VARIANTS=		standard
SDESC[standard]=	Library for creating text-based UIs
HOMEPAGE=		https://github.com/termbox/termbox2
CONTACT=		Michael_Reim[kraileth@elderlinux.org]

DOWNLOAD_GROUPS=	main
SITES[main]=		GITHUB/termbox:termbox2:v${PORTVERSION}
DISTFILE[1]=		generated:main

SPKGS[standard]=	complete primary dev

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		MIT:primary
LICENSE_FILE=		MIT:{{WRKSRC}}/LICENSE
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		devel/termbox

USES=			gmake
INSTALL_REQ_TOOLCHAIN=	yes

post-patch:
	${REINPLACE_CMD} "s!__PREFIX__!${STAGEDIR}${PREFIX}!" ${WRKSRC}/Makefile

do-install:
	(cd ${WRKSRC} && gmake install_h install_so install_a)

post-install:
	${STRIP_CMD} ${STAGEDIR}${PREFIX}/lib/libtermbox.so.2
