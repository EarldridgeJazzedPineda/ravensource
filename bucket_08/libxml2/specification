DEF[PORTVERSION]=	EXTRACT_INFO(LIBXML2_VERSION)
DEF[PORTREVISION]=	EXTRACT_INFO(LIBXML2_REVISION)
DEF[FOLDER]=		${PORTVERSION:R}
DEF[SOVERSION]=		${PORTVERSION}
# ----------------------------------------------------------------------------

NAMEBASE=		libxml2
VERSION=		${PORTVERSION}
REVISION=		${PORTREVISION}
KEYWORDS=		textproc
VARIANTS=		standard
SDESC[standard]=	XML parser library for GNOME
HOMEPAGE=		http://xmlsoft.org/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		GNOME/libxml2/${FOLDER}
DISTFILE[1]=		libxml2-${PORTVERSION}.tar.xz:main
DIST_SUBDIR=		gnome2

SPKGS[standard]=	complete primary dev man

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

FPC_EQUIVALENT=		textproc/libxml2

USES=			cpe gmake iconv libtool pkgconfig shebangfix mbsdfix
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		--with-schemas
			--with-threads
			--with-iconv={{ICONV_PREFIX}}
			--without-icu
			--with-lzma=/usr
			--without-python
			--enable-static
INSTALL_TARGET=		install-strip
INSTALL_REQ_TOOLCHAIN=	yes
SHEBANG_GLOB=		*.py
SOVERSION=		${SOVERSION}
CPE_VENDOR=		xmlsoft

# We should be able to remove this at v2.11.3
VAR_OPSYS[midnightbsd]=	CONFIGURE_ENV=ac_cv_search_iconv=-liconv
VAR_OPSYS[dragonfly]=	CONFIGURE_ENV=ac_cv_search_iconv=-liconv
VAR_OPSYS[freebsd]=	CONFIGURE_ENV=ac_cv_search_iconv=-liconv
VAR_OPSYS[netbsd]=	CONFIGURE_ENV=ac_cv_search_iconv=-liconv
VAR_OPSYS[sunos]=	CONFIGURE_ENV=ac_cv_search_iconv=-liconv

post-patch:
.for f in catalog.c xmlcatalog.c xmllint.c doc/xmllint.1
	${REINPLACE_CMD} -e \
		's|/etc/xml/catalog|${LOCALBASE}/share/xml/catalog|g; \
		 s|/etc/sgml/catalog|${LOCALBASE}/share/sgml/catalog|g' \
		${WRKSRC}/${f}
.endfor

post-install:
	${RM} -r ${STAGEDIR}${PREFIX}/share/gtk-doc
	${RM} -r ${STAGEDIR}${STD_DOCDIR}
