DEF[PORTVERSION]=	EXTRACT_INFO(GSTREAMER1_VERSION)
DEF[GST_VERSION]=	EXTRACT_INFO(GSTREAMER1_GST)
DEF[PLUGIN]=		theora
DEF[PLUGIN_DESC]=	theora
DEF[FPC]=		multimedia/gstreamer1-plugins-theora
# ----------------------------------------------------------------------------

NAMEBASE=		gstreamer1-plugins-${PLUGIN}
VERSION=		${PORTVERSION}
KEYWORDS=		multimedia
VARIANTS=		standard
SDESC[standard]=	GStreamer1 ${PLUGIN_DESC} plugin
HOMEPAGE=		https://gstreamer.freedesktop.org/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		https://gstreamer.freedesktop.org/src/gst-plugins-base/
DISTFILE[1]=		gst-plugins-base-${PORTVERSION}.tar.xz:main

SPKGS[standard]=	single

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		LGPL20+:single
LICENSE_FILE=		LGPL20+:{{WRKSRC}}/COPYING
LICENSE_TERMS=		single:{{WRKDIR}}/TERMS
LICENSE_AWK=		TERMS:"^$$"
LICENSE_SOURCE=		TERMS:{{WRKSRC}}/ext/pango/gstbasetextoverlay.c
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		${FPC}

BUILD_DEPENDS=		autoselect-python:single:standard
BUILDRUN_DEPENDS=	gstreamer1-plugins-base:primary:standard
			gstreamer1:primary:standard
			libtheora:single:standard
			libogg:primary:standard

USES=			gmake pkgconfig meson
GNOME_COMPONENTS=	glib
# GNOME_COMPONENTS=introspection disabled on gstreamer1
MESON_ARGS=		-Dalsa=disabled
			-Dcdparanoia=disabled
			-Dlibvisual=disabled
			-Dogg=disabled
			-Dopus=disabled
			-Dpango=disabled
			-Dtheora=enabled
			-Dtremor=disabled
			-Dvorbis=disabled
			-Dx11=disabled
			-Dxshm=disabled
			-Dxvideo=disabled
			-Ddoc=disabled
			-Dnls=disabled
			-Dtools=disabled
			-Dexamples=disabled
			-Dtests=disabled
			-Dorc=disabled
			-Daudioconvert=disabled
			-Daudiomixer=disabled
			-Daudiorate=disabled
			-Daudioresample=disabled
			-Daudiotestsrc=disabled
			-Dcompositor=disabled
			-Dencoding=disabled
			-Dgio=disabled
			-Dadder=disabled
			-Dapp=disabled
			-Doverlaycomposition=disabled
			-Dpbtypes=disabled
			-Dplayback=disabled
			-Drawparse=disabled
			-Dsubparse=disabled
			-Dtcp=disabled
			-Dtypefind=disabled
			-Dvideoconvert=disabled
			-Dvideorate=disabled
			-Dvideoscale=disabled
			-Dvideotestsrc=disabled
			-Dvolume=disabled
			-Dgl=disabled
DISTNAME=		gst-plugins-base-${PORTVERSION}
PLIST_SUB=		GSTVER=${GST_VERSION}
			PLUGIN=${PLUGIN}

post-patch:
	${REINPLACE_CMD} \
		-e "/subdir..gst-libs../d" \
		-e "/subdir..pkgconfig../d" \
		${WRKSRC}/meson.build
