DEF[PORTVERSION]=	0.1.3
# ----------------------------------------------------------------------------

NAMEBASE=		libnspsl
VERSION=		${PORTVERSION}
KEYWORDS=		dns
VARIANTS=		standard
SDESC[standard]=	NetSurf Public Suffix List handling library
HOMEPAGE=		https://source.netsurf-browser.org/libnspsl.git
CONTACT=		Michael_Reim[kraileth@elderlinux.org]

DOWNLOAD_GROUPS=	main
SITES[main]=		https://download.netsurf-browser.org/libs/releases/
DISTFILE[1]=		libnspsl-${PORTVERSION}-src.tar.gz:main

SPKGS[standard]=	single

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		MIT:single
LICENSE_FILE=		MIT:{{WRKSRC}}/COPYING
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		dns/libnspsl

BUILD_DEPENDS=		netsurf-buildsystem:single:standard
USES=			gmake

MAKE_ENV=		COMPONENT_TYPE="lib-shared"
INSTALL_REQ_TOOLCHAIN=	yes

SOVERSION=		${PORTVERSION}

post-install:
	${STRIP_CMD} ${STAGEDIR}${PREFIX}/lib/libnspsl.so.${PORTVERSION}
