DEF[PORTVERSION]=	1.25.0
DEF[SOVERSION]=		14.14.0
DEF[SOMAJOR]=		${SOVERSION:R:R}
# ----------------------------------------------------------------------------

NAMEBASE=		libnghttp2
VERSION=		${PORTVERSION}
KEYWORDS=		net www
VARIANTS=		standard
SDESC[standard]=	HTTP/2 C library and tools
HOMEPAGE=		https://nghttp2.org/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		GITHUB/nghttp2:nghttp2:v${PORTVERSION}
DISTFILE[1]=		generated:main

SPKGS[standard]=	single

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

FPC_EQUIVALENT=		www/libnghttp2

USES=			autoreconf libtool pkgconfig
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		--enable-lib-only
INSTALL_TARGET=		install-strip
PLIST_SUB=		SOVERSION=${SOVERSION} SOMAJOR=${SOMAJOR}
