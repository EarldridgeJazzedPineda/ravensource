DEF[PORTVERSION]=	20170512
# ----------------------------------------------------------------------------

NAMEBASE=		ravenports
VERSION=		${PORTVERSION}
REVISION=		2
KEYWORDS=		raven
VARIANTS=		dragonfly freebsd64 linux sunos
SDESC[linux]=		Install turnkey Ravenports on Linux
SDESC[dragonfly]=	Install turnkey Ravenports on DragonFly
SDESC[freebsd64]=	Install turnkey Ravenports on FreeBSD/amd64
SDESC[sunos]=		Install turnkey Ravenports on Solaris 10u8
HOMEPAGE=		https://github.com/jrmarino/Ravenports
CONTACT=		John_Marino[draco@marino.st]

DOWNLOAD_GROUPS=	none

SPKGS[linux]=		single
SPKGS[dragonfly]=	single
SPKGS[freebsd64]=	single
SPKGS[sunos]=		single

OPTIONS_AVAILABLE=	DRAGONFLY FREEBSD64 LINUX SUNOS
OPTIONS_STANDARD=	none
VOPTS[dragonfly]=	DRAGONFLY=ON FREEBSD64=OFF LINUX=OFF SUNOS=OFF
VOPTS[freebsd64]=	DRAGONFLY=OFF FREEBSD64=ON LINUX=OFF SUNOS=OFF
VOPTS[linux]=		DRAGONFLY=OFF FREEBSD64=OFF LINUX=ON SUNOS=OFF
VOPTS[sunos]=		DRAGONFLY=OFF FREEBSD64=OFF LINUX=OFF SUNOS=ON

RUN_DEPENDS=		pkg-bsd:single:standard
			ravenadm:single:standard
			ravensys-toolchain:single:standard
			nss:caroot:standard

SKIP_BUILD=		yes
SKIP_INSTALL=		yes

[DRAGONFLY].DESCRIPTION=		DragonFly support
[DRAGONFLY].RUN_DEPENDS_ON=		ravensys-root:single:dragonfly

[FREEBSD64].DESCRIPTION=		FreeBSD/amd64 support
[FREEBSD64].RUN_DEPENDS_ON=		ravensys-root:single:freebsd64

[LINUX].DESCRIPTION=			Linux support
[LINUX].RUN_DEPENDS_ON=			ravensys-root:single:linux

[SUNOS].DESCRIPTION=			Solaris/Illumos support
[SUNOS].RUN_DEPENDS_ON=			ravensys-root:single:sunos
