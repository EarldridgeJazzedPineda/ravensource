DEF[PORTVERSION]=	2017
DEF[RELEASE_TAG]=	611f857
DEF[RELEASE_LANGKIT]=	d8b8e22
# ------------------------------------------------------------------------

NAMEBASE=		libadalang
VERSION=		${PORTVERSION}
KEYWORDS=		python devel
VARIANTS=		py27
SDESC[py27]=		High-performance semantic engine for Ada (PY 27)
# SDESC[py35]=		High-performance semantic engine for Ada (PY 35)
# SDESC[py36]=		High-performance semantic engine for Ada (PY 36)
HOMEPAGE=		https://github.com/AdaCore/libadalang
CONTACT=		John_Marino[draco@marino.st]

DOWNLOAD_GROUPS=	main langkit
SITES[main]=		GITHUB/AdaCore:libadalang:${RELEASE_TAG}
SITES[langkit]=		GITHUB/AdaCore:langkit:${RELEASE_LANGKIT}
DISTFILE[1]=		generated:main
DISTFILE[2]=		generated:langkit
DF_INDEX=		1 2

SPKGS[py27]=		single
# SPKGS[py35]=		single
# SPKGS[py36]=		single

OPTIONS_AVAILABLE=	PY27
OPTIONS_STANDARD=	none
VOPTS[py27]=		PY27=ON
# VOPTS[py35]=		PY27=OFF PY35=ON PY36=OFF
# VOPTS[py36]=		PY27=OFF PY35=OFF PY36=ON

LICENSE=		GPLv3+:single
LICENSE_FILE=		GPLv3+:{{WRKSRC}}/LICENSE
LICENSE_SCHEME=		solo

BUILD_DEPENDS=		quex:single:standard
			gnatcoll:primary:standard
			xmlada:primary:standard

USES=			gprbuild

[PY27].USES_ON=				python:py27
[PY27].BUILDRUN_DEPENDS_ON=		python-Mako:single:py27
					python-PyYAML:single:py27
					python-coverage:single:py27
					python-psutil:single:py27
					python-Sphinx:single:py27
					python-sphinx_rtd_theme:single:py27
					python-funcy:single:py27
					python-docutils:single:py27
					python-autopep8:single:py27
					python-yapf:single:py27
					python-enum:single:py27
					python-enum34:single:py27

post-extract:
	${MV} ${WRKDIR}/langkit* ${WRKSRC}/langkit

post-patch:
	${REINPLACE_CMD} \
		-e "/token-memory-management-by-user/d" \
		-e "/token-policy/d" \
		${WRKSRC}/langkit/langkit/compile_context.py
	${REINPLACE_CMD} \
		-e "s/build_shared = args.enable_shared/build_shared = False/" \
		${WRKSRC}/langkit/langkit/libmanage.py

do-build:
	(cd ${BUILD_WRKSRC} && ${SETENV} ${MAKE_ENV} \
		${PYTHON_CMD} ada/manage.py make)

do-install:
	(cd ${BUILD_WRKSRC} && ${SETENV} ${MAKE_ENV} \
		${PYTHON_CMD} ada/manage.py install ${STAGEDIR}${PREFIX})
