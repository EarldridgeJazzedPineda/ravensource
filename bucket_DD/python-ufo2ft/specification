SITES[main]=		PYPIWHL/8c/63/58498501f78d7bcccf698245df741c2b06466c39ab707312633659700209
DISTFILE[1]=		ufo2ft-${PORTVERSION}-py2.py3-none-any.whl:main

SPKGS[py39]=		single
SPKGS[py310]=		single

OPTIONS_AVAILABLE=	PY39 PY310
OPTIONS_STANDARD=	none
VOPTS[py39]=		PY39=ON PY310=OFF
VOPTS[py310]=		PY39=OFF PY310=ON

