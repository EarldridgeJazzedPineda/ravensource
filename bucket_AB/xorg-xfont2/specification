DEF[PORTVERSION]=	2.0.7
DEF[XNAME]=		xfont2
DEF[ALTNAME]=		libXfont2
# ----------------------------------------------------------------------------

NAMEBASE=		xorg-${XNAME}
VERSION=		${PORTVERSION}
KEYWORDS=		x11
VARIANTS=		standard
SDESC[standard]=	X font library
HOMEPAGE=		https://www.x.org/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		XORG/individual/lib
DISTFILE[1]=		${ALTNAME}-${PORTVERSION}.tar.xz:main
DIST_SUBDIR=		xorg

SPKGS[standard]=	complete primary dev

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		MIT:primary
LICENSE_FILE=		MIT:{{WRKSRC}}/COPYING
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		x11-fonts/${ALTNAME}

EXRUN[dev]=		freetype:dev:standard
			xorg-fontenc:dev:standard

USES=			cpe libtool zlib freetype solaris-funcs
XORG_COMPONENTS=	xorgproto xtransproto fontenc
CPE_VENDOR=		x.org
CPE_PRODUCT=		libxfont
SOL_FUNCTIONS=		strnlen:src/bitmap/pcfread.c
			err.h:include/err.h
CFLAGS=			-Wno-unused-function
DISTNAME=		${ALTNAME}-${PORTVERSION}
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		--without-xmlto
			--disable-devel-docs
			--without-fop
INSTALL_TARGET=		install-strip
