DEF[PORTVERSION]=	EXTRACT_INFO(XORG_VERSION)
DEF[REVISION]=		4
DEF[L1]=		DGA X11PERF XGC XKBUTILS
DEF[L2]=		APPRES XCONSOLE XINFO XDRIINFO XEV XLSATOMS XLSCLIENTS XPROP XVINFO XWININFO
DEF[L3]=		XINPUT XKBCOMP XKBMAP XKBEVD XMODMAP
DEF[L4]=		BITMAP ICEAUTH SESSREG SMPROXY TWM XAUTH
DEF[L5]=		XBACKLIGHT XCALC XCLOCK XCMSDB XCURGEN XDM XGAMMA XHOST
DEF[L6]=		XINIT XKILL XLOCKMORE XMESSAGE XPR XRANDR XRDB XREFRESH XSET
DEF[L7]=		XSETROOT XTERM XWD XWUD
DEF[OPTIONS]=		${L1} ${L2} ${L3} ${L4} ${L5} ${L6} ${L7}
# ----------------------------------------------------------------------------

NAMEBASE=		xorg-apps
VERSION=		${PORTVERSION}
REVISION=		1
KEYWORDS=		x11
VARIANTS=		std
SDESC[std]=		X.Org applications meta-port
HOMEPAGE=		https://www.x.org/
CONTACT=		nobody

DOWNLOAD_GROUPS=	none

SPKGS[std]=		single

OPTIONS_AVAILABLE=	${OPTIONS}
OPTIONS_STANDARD=	${OPTIONS}
OPT_ON[all]=		${OPTIONS}

OPTGROUP_UNLIMITED=	INFOMON DEVICES DEMOS
OPTDESCR[INFOMON]=	Information display applications
OPTDESCR[DEVICES]=	Input device applications
OPTDESCR[DEMOS]=	Test and demo applications
OPTGROUP[INFOMON]=	${L2}
OPTGROUP[DEVICES]=	${L3}
OPTGROUP[DEMOS]=	${L1}

[APPRES].DESCRIPTION=			Application resource usage display
[BITMAP].DESCRIPTION=			Bitmap editor and converter
[DGA].DESCRIPTION=			XFree86-DGA extension tester
[ICEAUTH].DESCRIPTION=			ICE authority utility
[SESSREG].DESCRIPTION=			Manager for xdm sessions
[SMPROXY].DESCRIPTION=			Proxy provider for X11R6 sessions
[TWM].DESCRIPTION=			Tab window manager
[X11PERF].DESCRIPTION=			X11 server performance tester
[XAUTH].DESCRIPTION=			X authority utility
[XBACKLIGHT].DESCRIPTION=		Backlight adjustment tool
[XCALC].DESCRIPTION=			Scientific calculator
[XCLOCK].DESCRIPTION=			Clock (analog or digital)
[XCMSDB].DESCRIPTION=			Device color characterization utility
[XCONSOLE].DESCRIPTION=			System console message monitor
[XCURGEN].DESCRIPTION=			Cursor generation tool
[XDM].DESCRIPTION=			X display manager
[XDRIINFO].DESCRIPTION=			DRI driver information query tool
[XEV].DESCRIPTION=			X events monitor
[XGAMMA].DESCRIPTION=			Gamma correction tool
[XGC].DESCRIPTION=			X graphics demo
[XHOST].DESCRIPTION=			X server access control tool
[XINFO].DESCRIPTION=			X server information display
[XINIT].DESCRIPTION=			X system initializer
[XINPUT].DESCRIPTION=			Input device configuration tool
[XKBCOMP].DESCRIPTION=			Keyboard layout compiler
[XKBMAP].DESCRIPTION=			Keyboard layout selector
[XKBEVD].DESCRIPTION=			Keyboard event daemon
[XKBUTILS].DESCRIPTION=			Keyboard utilities demo
[XKILL].DESCRIPTION=			Client connection kill tool
[XLOCKMORE].DESCRIPTION=		X screen locker
[XLSATOMS].DESCRIPTION=			Interned atoms list display
[XLSCLIENTS].DESCRIPTION=		Connected clients information display
[XMESSAGE].DESCRIPTION=			Message and query display tool
[XMODMAP].DESCRIPTION=			Key and pointer button mapping tool
[XPR].DESCRIPTION=			Utility to print X window dump
[XRANDR].DESCRIPTION=			CLI interface to RandR extension
[XPROP].DESCRIPTION=			Window and font properties display
[XRDB].DESCRIPTION=			X server resource database utility
[XREFRESH].DESCRIPTION=			Tool to refresh part or all of screen
[XSET].DESCRIPTION=			Tool to set user preferences
[XSETROOT].DESCRIPTION=			Tool to set parameters of background window
[XTERM].DESCRIPTION=			Terminal emulator
[XVINFO].DESCRIPTION=			X-Video adapter information display
[XWD].DESCRIPTION=			X window dump tool
[XWININFO].DESCRIPTION=			X window information display
[XWUD].DESCRIPTION=			Image display tool

