DEF[PORTVERSION]=	EXTRACT_INFO(KDE6_FRAMEWORKS_VERSION)
# ----------------------------------------------------------------------------

NAMEBASE=		kf6-kdbusaddons
VERSION=		${PORTVERSION}
KEYWORDS=		devel
VARIANTS=		standard
SDESC[standard]=	KF6 add-ons to QtDBus
HOMEPAGE=		https://api.kde.org/frameworks/kdbusaddons/html/index.html
CONTACT=		Michael_Reim[kraileth@elderlinux.org]

DOWNLOAD_GROUPS=	main
SITES[main]=		https://download.kde.org/stable/frameworks/${PORTVERSION:R}/
DISTFILE[1]=		kdbusaddons-${PORTVERSION}.tar.xz:main
DIST_SUBDIR=		kde6

SPKGS[standard]=	complete primary tools dev nls

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		LGPL20+:primary
			LGPL21:primary
			LGPL3:primary
LICENSE_FILE=		LGPL20+:{{WRKSRC}}/LICENSES/LGPL-2.0-or-later.txt
			LGPL21:{{WRKSRC}}/LICENSES/LGPL-2.1-only.txt
			LGPL3:{{WRKSRC}}/LICENSES/LGPL-3.0-only.txt
LICENSE_TERMS=		primary:{{WRKDIR}}/TERMS
LICENSE_SCHEME=		multi

FPC_EQUIVALENT=		devel/kf6-kdbusaddons

BUILD_DEPENDS=		kf6-extra-cmake-modules:primary:standard
			qt6-qtbase:dev:standard
			qt6-qttools:dev:standard
BUILDRUN_DEPENDS=	qt6-qtbase:primary:standard
			qt6-qttools:primary:standard

USES=			cmake
XORG_COMPONENTS=	xcb
DISTNAME=		kdbusaddons-${PORTVERSION}
CMAKE_ARGS=		-DCMAKE_PREFIX_PATH:PATH={{PREFIX}}/lib/qt6/cmake
SOVERSION=		${PORTVERSION}

EXRUN[tools]=		primary

post-extract:
	${ECHO} "Terms extracted from 'src/kdedmodule.h':" > ${WRKDIR}/TERMS
	${SED} -n '/ifndef/!p;//q' ${WRKSRC}/src/kdedmodule.h >> ${WRKDIR}/TERMS
	${ECHO} "Terms extracted from 'src/kdbusservice.h':" >> ${WRKDIR}/TERMS
	${SED} -n '/ifndef/!p;//q' ${WRKSRC}/src/kdbusservice.h >> ${WRKDIR}/TERMS

post-stage:
	(cd ${STAGEDIR}${PREFIX} && ${STRIP_CMD} bin/kquitapp6 \
		lib/libKF6DBusAddons.so)
