			xorg-font-misc-misc:single:standard
			xorg-font-mutt-misc:single:standard
			xorg-font-schumacher-misc:single:standard
			xorg-font-sony-misc:single:standard
			xorg-font-sun-misc:single:standard

SKIP_BUILD=		yes
SKIP_INSTALL=		yes
