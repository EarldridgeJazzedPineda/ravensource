DEF[PORTVERSION]=	EXTRACT_INFO(XORG_VERSION)
# ----------------------------------------------------------------------------

NAMEBASE=		xorg-misc-bitmap-fonts
VERSION=		${PORTVERSION}
KEYWORDS=		x11_fonts
VARIANTS=		standard
SDESC[standard]=	X.Org miscellaneous bitmap fonts
HOMEPAGE=		https://www.x.org/
CONTACT=		nobody

DOWNLOAD_GROUPS=	none

SPKGS[standard]=	single

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

FPC_EQUIVALENT=		x11-fonts/xorg-fonts-miscbitmaps

