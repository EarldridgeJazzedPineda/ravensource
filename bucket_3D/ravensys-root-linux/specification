VOPTS[ABI26]=		NOTSTD=ON ABI26=ON

ONLY_FOR_OPSYS=		linux

INVALID_RPATH=		yes

BUILD_DEPENDS=		nawk:single:standard
			diffutils:primary:ravensys
			libarchive:primary:static
			gnugrep:primary:ravensys
