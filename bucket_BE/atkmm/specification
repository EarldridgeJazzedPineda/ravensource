DEF[PORTVERSION]=	2.29.1
DEF[SOVERSION]=		1.1.0
DEF[API]=		2.30
# ----------------------------------------------------------------------------

NAMEBASE=		atkmm
VERSION=		${PORTVERSION}
KEYWORDS=		accessibility
VARIANTS=		standard
SDESC[standard]=	C++ bindings for ATK
HOMEPAGE=		https://www.gtkmm.org/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		GNOME/atkmm/${PORTVERSION:R}/
DISTFILE[1]=		atkmm-${PORTVERSION}.tar.xz:main

SPKGS[standard]=	single

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		LGPL21+:single
LICENSE_FILE=		LGPL21+:{{WRKSRC}}/COPYING
LICENSE_TERMS=		single:{{WRKDIR}}/TERMS
LICENSE_AWK=		TERMS:"_ATKMM_H"
LICENSE_SOURCE=		TERMS:{{WRKSRC}}/atk/atkmm.h
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		accessibility/atkmm

USES=			gmake libtool pkgconfig
GNOME_COMPONENTS=	atk glibmm
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		--disable-documentation
INSTALL_TARGET=		install-strip
SOVERSION=		${SOVERSION}
PLIST_SUB=		API=${API}

post-patch:
	# adjust for latest glibmm versions
	${REINPLACE_CMD} -e 's|glibmm-2.60|glibmm-2.66|' \
		${WRKSRC}/configure
	${REINPLACE_CMD} -e 's|-2.60|-2.66|' \
		${WRKSRC}/codegen/Makefile.in
