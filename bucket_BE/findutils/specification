DEF[PORTVERSION]=	4.6.0
DEF[LOCALSTATEDIR]=	/var/db
# ----------------------------------------------------------------------------

NAMEBASE=		findutils
VERSION=		${PORTVERSION}
KEYWORDS=		misc
VARIANTS=		standard nls
SDESC[standard]=	GNU find utilities (static)
SDESC[nls]=		GNU find utilities with native language support
HOMEPAGE=		http://www.gnu.org/software/findutils/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		GNU/findutils
DISTFILE[1]=		findutils-${PORTVERSION}.tar.gz:main

SPKGS[standard]=	single
SPKGS[nls]=		single

OPTIONS_AVAILABLE=	GPREFIX NLS
OPTIONS_STANDARD=	GPREFIX NLS
OPT_ON[all]=		GPREFIX
VOPTS[nls]=		GPREFIX=ON NLS=ON

LICENSE=		GPLv3:single
LICENSE_FILE=		GPLv3:{{WRKSRC}}/COPYING
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		misc/findutils

USES=			charsetfix cpe gmake
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		--localstatedir="${LOCALSTATEDIR}"
MAKE_ARGS=		INSTALL_SCRIPT="{{INSTALL_SCRIPT}}"
INFO=			single:find single:find-maint
CPE_VENDOR=		gnu

PLIST_SUB=		GPREFIX-OFF= GPREFIX-ON="g"

[NLS].USES_ON=				gettext-runtime
[NLS].CONFIGURE_ENABLE_BOTH=		nls

[GPREFIX].CONFIGURE_ARGS_ON=		--program-prefix=g
[GPREFIX].DESCRIPTION=			Build program with the "g" prefix

post-install:
	${RM} -r ${STAGEDIR}/var
