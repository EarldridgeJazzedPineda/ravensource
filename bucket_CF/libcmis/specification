DEF[PORTVERSION]=	0.6.0
DEF[SOVERSION]=		6.0.0
DEF[CMIS_VER]=		0.6
# ----------------------------------------------------------------------------

NAMEBASE=		libcmis
VERSION=		${PORTVERSION}
KEYWORDS=		net devel
VARIANTS=		standard
SDESC[standard]=	Client library for the CMIS interface
HOMEPAGE=		https://github.com/tdf/libcmis
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
# Use libreoffice fork of libcmis (for now)
# SITES[main]=		GITHUB/tdf:libcmis:v${PORTVERSION}
# DISTFILE[1]=		generated:main
SITES[main]=		https://dev-www.libreoffice.org/src/
DISTFILE[1]=		libcmis-${PORTVERSION}.tar.xz:main

SPKGS[standard]=	complete primary dev tools

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

FPC_EQUIVALENT=		net/libcmis

BUILD_DEPENDS=		cppunit:single:standard
			boost-libraries:dev:standard
BUILDRUN_DEPENDS=	boost-libraries:primary:standard

EXRUN[tools]=		primary

USES=			gmake libtool pkgconfig curl mbsdfix
GNOME_COMPONENTS=	libxml2
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		--disable-werror
			--with-boost="{{LOCALBASE}}"
			--without-man
INSTALL_TARGET=		install-strip
INSTALL_REQ_TOOLCHAIN=	yes
PLIST_SUB=		VER=${CMIS_VER}
SOVERSION=		${SOVERSION}

post-patch:
	${REINPLACE_CMD} -e "s|@WITH_LIBCMIS_MAN_FALSE@|#|g" \
	    ${WRKSRC}/Makefile.in
