NAMEBASE=		gnatcross-bootstrap
VERSION=		${PORTVERSION}
REVISION=		${PORTREVISION}
KEYWORDS=		lang
VARIANTS=		standard
SDESC[standard]=	Gnatcross-to-native compiler generator
HOMEPAGE=		http://www.dragonlace.net/
