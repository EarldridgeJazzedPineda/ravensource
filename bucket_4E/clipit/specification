DEF[PORTVERSION]=	1.4.3
DEF[RELEASE_TAG]=	c7ce847
# ----------------------------------------------------------------------------

NAMEBASE=		clipit
VERSION=		${PORTVERSION}
REVISION=		1
KEYWORDS=		deskutils
VARIANTS=		standard
SDESC[standard]=	Lightweight GTK+ clipboard manager
HOMEPAGE=		https://github.com/CristianHenzel/ClipIt/
CONTACT=		nobody

# Clipit 1.4.3 was never formally released apparently.
# Other repos starting to use snapshots labelled as 1.4.3 because the
# ChangeLog implies the version was updated to 1.4.3 (without a
# corresponding git release.  Those repos use random tags (e.g.
# 2016-01-13 for gtk3 support) but this keeps to 2015-11-10, the
# date of the 1.4.3 annotation.

DOWNLOAD_GROUPS=	main
SITES[main]=		GITHUB/CristianHenzel:ClipIt:${RELEASE_TAG}
DISTFILE[1]=		generated:main

SPKGS[standard]=	single

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		GPLv3+:single
LICENSE_FILE=		GPLv3+:{{WRKSRC}}/COPYING
LICENSE_TERMS=		single:{{WRKDIR}}/TERMS
LICENSE_AWK=		TERMS:"^$$"
LICENSE_SOURCE=		TERMS:{{WRKSRC}}/src/main.h
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		deskutils/clipit

USES=			autoreconf pkgconfig gmake gnome-icons:single
			gettext-tools gettext-runtime
GNOME_COMPONENTS=	gtk2 intltool
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		--disable-appindicator
			localedir={{LOCALBASE}}/share/locale

post-patch:
	# deal with intltool-0.40.5 bug (can't use intltool + gettext)
	${MV} ${WRKSRC}/configure.in ${WRKSRC}/configure.ac
	${REINPLACE_CMD} -e '/AM_GNU_GETTEXT/d' ${WRKSRC}/configure.ac

post-patch-sunos:
	${REINPLACE_CMD} -e 's|^itlocaledir =.*|itlocaledir = $$(datarootdir)/locale|' \
		${WRKSRC}/po/Makefile.in.in
