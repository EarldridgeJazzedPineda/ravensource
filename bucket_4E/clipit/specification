DEF[PORTVERSION]=	1.4.2
# ----------------------------------------------------------------------------

NAMEBASE=		clipit
VERSION=		${PORTVERSION}
KEYWORDS=		deskutils
VARIANTS=		standard
SDESC[standard]=	Lightweight GTK+ clipboard manager
HOMEPAGE=		https://github.com/CristianHenzel/ClipIt/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		SF/gtkclipit/Version%201
DISTFILE[1]=		clipit-${PORTVERSION}.tar.gz:main

SPKGS[standard]=	single

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		GPLv3:single
LICENSE_FILE=		GPLv3:{{WRKSRC}}/COPYING
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		deskutils/clipit

USES=			pkgconfig gmake gettext-tools gnome-icons
GNOME_COMPONENTS=	gtk2 intltool
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		localedir={{LOCALBASE}}/share/locale

post-patch-sunos:
	${REINPLACE_CMD} -e 's|^itlocaledir =.*|itlocaledir = $$(datarootdir)/locale|' \
		${WRKSRC}/po/Makefile.in.in
