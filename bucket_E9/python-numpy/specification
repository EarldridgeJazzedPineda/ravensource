DEF[PORTVERSION]=	1.24.0
# ------------------------------------------------------------------------

NAMEBASE=		python-numpy
VERSION=		${PORTVERSION}
KEYWORDS=		python
VARIANTS=		py310 py311
SDESC[py310]=		Array computing for Python (3.10)
SDESC[py311]=		Array computing for Python (3.11)
HOMEPAGE=		https://www.numpy.org
CONTACT=		Python_Automaton[python@ironwolf.systems]

DOWNLOAD_GROUPS=	main
SITES[main]=		PYPI/n/numpy
DISTFILE[1]=		numpy-${PORTVERSION}.tar.gz:main

SPKGS[py310]=		single
SPKGS[py311]=		single

OPTIONS_AVAILABLE=	PY310 PY311
OPTIONS_STANDARD=	none
VOPTS[py310]=		PY310=ON PY311=OFF
VOPTS[py311]=		PY310=OFF PY311=ON

# License listed at PyPI
# BSD-3-Clause

GENERATED=		yes
DISTNAME=		numpy-${PORTVERSION}

# install_requires extracted from setup.py


[PY310].USES_ON=			python:py310,sutools
[PY311].USES_ON=			python:py311,sutools

BUILD_DEPENDS=		python-Cython:single:python_used
BUILDRUN_DEPENDS=	lapack:blas:standard

USES=			cpe
CPE_VENDOR=		numpy
CPE_PRODUCT=		numpy
INSTALL_REQ_TOOLCHAIN=	yes

do-configure:
	# do-nothing

post-patch:
	${REINPLACE_CMD} -e 's|/usr/local|${LOCALBASE}|g' \
		${WRKSRC}/numpy/distutils/system_info.py
