DEF[PORTVERSION]=	3.5.15
DEF[XNAME]=		xpm
DEF[ALTNAME]=		libXpm
# ----------------------------------------------------------------------------

NAMEBASE=		xorg-${XNAME}
VERSION=		${PORTVERSION}
REVISION=		1
KEYWORDS=		x11
VARIANTS=		standard
SDESC[standard]=	X Pixmap library
HOMEPAGE=		https://www.x.org/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		XORG/individual/lib
DISTFILE[1]=		${ALTNAME}-${PORTVERSION}.tar.xz:main
DIST_SUBDIR=		xorg

SPKGS[standard]=	complete primary tools dev man

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		MIT:primary
LICENSE_FILE=		MIT:{{WRKSRC}}/COPYING
LICENSE_SCHEME=		solo

EXRUN[tools]=		xorg-xpm:primary:standard

USES=			cpe libtool
XORG_COMPONENTS=	x11 xext xt
DISTNAME=		${ALTNAME}-${PORTVERSION}
MUST_CONFIGURE=		gnu
CONFIGURE_ENV=		ac_cv_search_gettext=no
CONFIGURE_ARGS=		--disable-stat-zfile
			--disable-open-zfile
INSTALL_TARGET=		install-strip
FPC_EQUIVALENT=		x11/${ALTNAME}
CPE_VENDOR=		libxpm_project
