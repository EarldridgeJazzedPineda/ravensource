DEF[PORTVERSION]=	0.43
# ------------------------------------------------------------------------

NAMEBASE=		perl-Math-GSL
VERSION=		${PORTVERSION}
KEYWORDS=		perl
VARIANTS=		532 534
SDESC[532]=		Interface to the GNU Scientific Library (5.32)
SDESC[534]=		Interface to the GNU Scientific Library (5.34)
HOMEPAGE=		https://github.com/leto/math--gsl/tree/master
CONTACT=		Perl_Automaton[perl@ironwolf.systems]

DOWNLOAD_GROUPS=	main
SITES[main]=		CPAN/ID:H/HA/HAKONH
DISTFILE[1]=		Math-GSL-${PORTVERSION}.tar.gz:main

SPKGS[532]=		single
SPKGS[534]=		single

OPTIONS_AVAILABLE=	PERL_532 PERL_534
OPTIONS_STANDARD=	none
VOPTS[532]=		PERL_532=ON PERL_534=OFF
VOPTS[534]=		PERL_532=OFF PERL_534=ON

# License listed in CPAN directory:
# gpl_1

GENERATED=		yes
SINGLE_JOB=		yes
DISTNAME=		Math-GSL-${PORTVERSION}

# ----------------------------------------------
# |   Prerequisites extracted from META.json
# ----------------------------------------------
# |      runtime : Math::Complex (perl 5.32 core) (perl 5.34 core)
# |      runtime : Scalar::Util (perl 5.32 core) (perl 5.34 core)
# |      runtime : parent (perl 5.32 core) (perl 5.34 core)
# |      runtime : version (perl 5.32 core) (perl 5.34 core)
# |        build : Test::Class
# |        build : Test::Exception
# |        build : Test::More (perl 5.32 core) (perl 5.34 core)
# |        build : Test::Most
# |        build : Test::Taint
# |    configure : Alien::GSL
# |    configure : Module::Build
# |    configure : PkgConfig

[PERL_532].USES_ON=			perl:532,buildmod,run
[PERL_532].BUILD_DEPENDS_ON=		perl-Test-Class:single:532
					perl-Test-Exception:single:532
					perl-Test-Most:single:532
					perl-Test-Taint:single:532
					perl-Alien-GSL:single:532
					perl-Module-Build:single:532
					perl-PkgConfig:single:532
[PERL_534].USES_ON=			perl:534,buildmod,run
[PERL_534].BUILD_DEPENDS_ON=		perl-Test-Class:single:534
					perl-Test-Exception:single:534
					perl-Test-Most:single:534
					perl-Test-Taint:single:534
					perl-Alien-GSL:single:534
					perl-Module-Build:single:534
					perl-PkgConfig:single:534

USES=			cclibs:single
BUILDRUN_DEPENDS=	gsl:single:standard
INSTALL_REQ_TOOLCHAIN=	yes

post-patch:
	${REINPLACE_CMD} -e 's|@EXT1@|-Wl,-rpath,${PREFIX}/lib|' \
		-e 's|@EXT2@|-Wl,-rpath,${PREFIX}/lib/perl5/${PERL_VER}/${PERL_ARCH}/CORE|' \
		${WRKSRC}/inc/GSLBuilder.pm
	# support GSL 2.7.1
	${REINPLACE_CMD} -e 's|"2.7"|"2.7.1"|' ${WRKSRC}/inc/Ver2Func.pm
