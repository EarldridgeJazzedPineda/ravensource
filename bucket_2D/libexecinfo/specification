B_DEPS[sunos]=		libbsd4sol:single:standard

USES=			cclibs:single
DISTNAME=		libexecinfo
MAKE_ENV=		TOOLCHAINDIR={{WRKDIR}}/elftoolchain-${ETCVER}

post-extract:
	@${MKDIR} ${WRKSRC}
	${CP} ${FILESDIR}/* ${WRKSRC}
