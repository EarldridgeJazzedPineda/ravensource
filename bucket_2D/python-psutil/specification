# manually updated
DEF[PORTVERSION]=	5.9.3
# ------------------------------------------------------------------------

NAMEBASE=		python-psutil
VERSION=		${PORTVERSION}
KEYWORDS=		python
VARIANTS=		py39 py310
SDESC[py39]=		Process utilities module (3.9)
SDESC[py310]=		Process utilities module (3.10)
HOMEPAGE=		https://github.com/giampaolo/psutil
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		PYPI/p/psutil
DISTFILE[1]=		psutil-${PORTVERSION}.tar.gz:main

SPKGS[py39]=		single
SPKGS[py310]=		single

OPTIONS_AVAILABLE=	PY39 PY310
OPTIONS_STANDARD=	none
VOPTS[py39]=		PY39=ON PY310=OFF
VOPTS[py310]=		PY39=OFF PY310=ON

DISTNAME=		psutil-${PORTVERSION}
FPC_EQUIVALENT=		sysutils/py-psutil

[PY39].USES_ON=				python:py39,sutools
[PY310].USES_ON=			python:py310,sutools

post-install:
	${STRIP_CMD} ${STAGEDIR}${PYTHON_SITELIBDIR}/psutil/*.so
