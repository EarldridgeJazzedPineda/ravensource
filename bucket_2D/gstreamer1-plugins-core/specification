VERSION=		${PORTVERSION}
KEYWORDS=		multimedia
VARIANTS=		standard
SDESC[standard]=	Core set of audio and video GStreamer plugins
HOMEPAGE=		https://gstreamer.freedesktop.org/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		none

SPKGS[standard]=	single

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

FPC_EQUIVALENT=		multimedia/gstreamer1-plugins-core

RUN_DEPENDS=		gstreamer1-plugins-base:single:standard
			gstreamer1-plugins-pango:single:standard
			gstreamer1-plugins-vorbis:single:standard
			gstreamer1-plugins-ogg:single:standard
			gstreamer1-plugins-theora:single:standard
			gstreamer1-plugins-ugly:single:standard
			gstreamer1-plugins-a52dec:single:standard
			gstreamer1-plugins-dvdread:single:standard
			gstreamer1-plugins-good:single:standard
			gstreamer1-plugins-libpng:single:standard
			gstreamer1-plugins-bad:single:standard
			gstreamer1-plugins-resindvd:single:standard
			gstreamer1-plugins-libav:single:standard

SKIP_BUILD=		yes
SKIP_INSTALL=		yes
