DEF[PORTVERSION]=	0.9932
# ------------------------------------------------------------------------

NAMEBASE=		perl-Wx
VERSION=		${PORTVERSION}
KEYWORDS=		perl
VARIANTS=		532 534
SDESC[532]=		Interface to the wxWidgets GUI toolkit (5.32)
SDESC[534]=		Interface to the wxWidgets GUI toolkit (5.34)
HOMEPAGE=		http://svn.code.sf.net/p/wxperl/code/wxPerl
CONTACT=		Perl_Automaton[perl@ironwolf.systems]

DOWNLOAD_GROUPS=	main
SITES[main]=		CPAN/ID:M/MD/MDOOTSON
DISTFILE[1]=		Wx-${PORTVERSION}.tar.gz:main

SPKGS[532]=		single
SPKGS[534]=		single

OPTIONS_AVAILABLE=	PERL_532 PERL_534
OPTIONS_STANDARD=	none
VOPTS[532]=		PERL_532=ON PERL_534=OFF
VOPTS[534]=		PERL_532=OFF PERL_534=ON

# License listed in CPAN directory:
# perl_5

GENERATED=		yes
SINGLE_JOB=		yes
DISTNAME=		Wx-${PORTVERSION}

# ----------------------------------------------
# |   Prerequisites extracted from META.json
# ----------------------------------------------
# |      runtime : Alien::wxWidgets
# |        build : Alien::wxWidgets
# |        build : ExtUtils::MakeMaker (perl 5.32 core) (perl 5.34 core)
# |        build : ExtUtils::ParseXS (perl 5.32 core) (perl 5.34 core)
# |        build : ExtUtils::XSpp
# |        build : File::Spec::Functions (perl 5.32 core) (perl 5.34 core)
# |        build : Test::Harness (perl 5.32 core) (perl 5.34 core)
# |        build : Test::More (perl 5.32 core) (perl 5.34 core)
# |        build : if (perl 5.32 core) (perl 5.34 core)
# |    configure : Alien::wxWidgets

[PERL_532].USES_ON=			perl:532,configure
[PERL_532].BUILDRUN_DEPENDS_ON=		perl-Alien-wxWidgets:single:532
[PERL_532].BUILD_DEPENDS_ON=		perl-ExtUtils-XSpp:single:532
[PERL_534].USES_ON=			perl:534,configure
[PERL_534].BUILDRUN_DEPENDS_ON=		perl-Alien-wxWidgets:single:534
[PERL_534].BUILD_DEPENDS_ON=		perl-ExtUtils-XSpp:single:534

CONFIGURE_ENV=		CXX="{{CXX}}"
CFLAGS=			-std=c++11 -pthread -Wno-write-strings

pre-build:
	(cd ${WRKSRC} && ${DO_MAKE_BUILD} generated)

post-configure:
	${FIND} ${WRKSRC} -name "Makefile" -type f | ${XARGS} \
		${REINPLACE_CMD} -e \
		's|$$(CC)|$$(CXX)|g ; \
		 s|$$(CCFLAGS)|$$(CXXFLAGS)|g'
