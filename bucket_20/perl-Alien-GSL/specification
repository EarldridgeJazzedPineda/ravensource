					perl-Alien-Base-ModuleBuild:single:530
					perl-Module-Build:single:530
[PERL_532].USES_ON=			perl:532,buildmod,run
[PERL_532].BUILDRUN_DEPENDS_ON=		perl-Alien-Build:single:532
[PERL_532].BUILD_DEPENDS_ON=		perl-IO-Socket-SSL:single:532
					perl-Net-SSLeay:single:532
					perl-Alien-Base-ModuleBuild:single:532
					perl-Module-Build:single:532

USES=			libtool
