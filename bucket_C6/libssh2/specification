DEF[PORTVERSION]=	1.11.0
DEF[SOVERSION]=		1.0.1
# ----------------------------------------------------------------------------

NAMEBASE=		libssh2
VERSION=		${PORTVERSION}
REVISION=		1
KEYWORDS=		security devel
VARIANTS=		standard
SDESC[standard]=	SSH2 protocol library
HOMEPAGE=		https://www.libssh2.org/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		https://www.libssh2.org/download/
DISTFILE[1]=		libssh2-${PORTVERSION}.tar.gz:main

SPKGS[standard]=	complete primary dev man docs

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		BSD3CLAUSE:primary
LICENSE_FILE=		BSD3CLAUSE:{{WRKSRC}}/COPYING
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		security/libssh2

USES=			cpe cmake ssl zlib:build
SOVERSION=		${SOVERSION}
CMAKE_ARGS=		-DOPENSSL_ROOT_DIR="{{OPENSSLBASE}}"
			-DZLIB_USE_STATIC_LIBS:BOOL=ON

post-install:
	${STRIP_CMD} ${STAGEDIR}${PREFIX}/lib/libssh2.so
