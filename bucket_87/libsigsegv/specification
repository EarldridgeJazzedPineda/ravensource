DEF[PORTVERSION]=	2.11
# ----------------------------------------------------------------------------

NAMEBASE=		libsigsegv
VERSION=		${PORTVERSION}
KEYWORDS=		devel
VARIANTS=		standard
SDESC[standard]=	Handling page faults in user mode
HOMEPAGE=		http://www.gnu.org/software/libsigsegv/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		GNU/libsigsegv
DISTFILE[1]=		libsigsegv-${PORTVERSION}.tar.gz:main

SPKGS[standard]=	complete static shared

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		GPLv2:static
LICENSE_FILE=		GPLv2:{{WRKSRC}}/COPYING
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		devel/libsigsegv

USES=			libtool
C_USES[sunos]=		cclibs:shared
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		AWK="{{AWK}}" --enable-shared
INSTALL_TARGET=		install-strip

do-test:
	@(cd ${WRKSRC} && ${SETENV} ${MAKE_ENV} ${MAKE_CMD} ${MAKE_FLAGS} \
		${MAKEFILE} ${MAKE_ARGS} check)
