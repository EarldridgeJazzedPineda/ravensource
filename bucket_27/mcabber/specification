DEF[PORTVERSION]=	1.1.2
# ----------------------------------------------------------------------------

NAMEBASE=		mcabber
VERSION=		${PORTVERSION}
REVISION=		2
KEYWORDS=		net net_im
VARIANTS=		std
SDESC[std]=		Small Jabber console client
HOMEPAGE=		https://mcabber.com/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		https://mcabber.com/files/
DISTFILE[1]=		mcabber-${PORTVERSION}.tar.bz2:main

SPKGS[std]=		set primary dev man

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		GPLv2+:primary
LICENSE_FILE=		GPLv2+:{{WRKSRC}}/COPYING
LICENSE_TERMS=		primary:{{WRKDIR}}/TERMS
LICENSE_AWK=		TERMS:"^\#include"
LICENSE_SOURCE=		TERMS:{{WRKSRC}}/mcabber/main.c
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		net-im/mcabber

BUILD_DEPENDS=		libgcrypt:dev:std
			libidn:dev:std
			libotr:dev:std
BUILDRUN_DEPENDS=	loudmouth:single:std
			libidn:primary:std
			libotr:primary:std

USES=			desktop-utils:primary iconv libtool
			cpe ncurses pkgconfig mbsdfix
GNOME_COMPONENTS=	glib
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		--disable-hgcset
			--enable-gpgme
			--enable-otr
			--with-libidn
INSTALL_TARGET=		install-strip

post-patch:
	${REINPLACE_CMD} -e 's|$$"$${libdir}|"$${libdir}|' \
		-e 's|-O2 $$CFLAGS|$$CFLAGS|' ${WRKSRC}/configure

post-install:
	${MKDIR} ${STAGEDIR}${PREFIX}/share/applications
	${INSTALL_DATA} ${WRKSRC}/mcabber.desktop \
		${STAGEDIR}${PREFIX}/share/applications
