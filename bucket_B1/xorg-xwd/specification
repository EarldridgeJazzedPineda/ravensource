DEF[PORTVERSION]=	1.0.6
DEF[XNAME]=		xwd
DEF[ALTNAME]=		xwd
# ----------------------------------------------------------------------------

NAMEBASE=		xorg-${XNAME}
VERSION=		${PORTVERSION}
KEYWORDS=		x11
VARIANTS=		standard
SDESC[standard]=	Utility to dump an image of an X window
HOMEPAGE=		https://www.x.org/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
