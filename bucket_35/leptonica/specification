DEF[PORTVERSION]=	1.83.1
DEF[SOVERSION]=		6.0.0
# ----------------------------------------------------------------------------

NAMEBASE=		leptonica
VERSION=		${PORTVERSION}
KEYWORDS=		graphics
VARIANTS=		standard
SDESC[standard]=	Image processing and analysis library
HOMEPAGE=		http://www.leptonica.org/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		https://github.com/DanBloomberg/leptonica/releases/download/${PORTVERSION}/
DISTFILE[1]=		leptonica-${PORTVERSION}.tar.gz:main

SPKGS[standard]=	complete primary tools dev

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		BSD2CLAUSE:primary
LICENSE_FILE=		BSD2CLAUSE:{{WRKSRC}}/src/leptonica-license.txt
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		graphics/leptonica

BUILD_DEPENDS=		WebP:dev:standard
			openjpeg:dev:standard
BUILDRUN_DEPENDS=	WebP:primary:standard
			openjpeg:primary:standard

EXRUN[tools]=		leptonica:primary:standard

USES=			cpe png jpeg tiff gif libtool solaris-funcs mbsdfix
SOL_FUNCTIONS=		dirfd:src/sarray1.c
MUST_CONFIGURE=		gnu
INSTALL_TARGET=		install-strip
SOVERSION=		${SOVERSION}

post-patch:
	# add support for openjpeg 2.3
	${REINPLACE_CMD} -e 's|openjpeg-2.0|openjpeg-2.3|' ${WRKSRC}/configure
