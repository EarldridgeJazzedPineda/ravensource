			LIBPREFIX="{{PREFIX}}/lib"
			L_MANDIR="{{PREFIX}}/share/man"
			CONFIG+=WITH_I18N

post-patch:
	${GREP} -rl "/usr/local" ${WRKSRC} | \
		${XARGS} ${REINPLACE_CMD} -e 's|/usr/local|${PREFIX}|g'
