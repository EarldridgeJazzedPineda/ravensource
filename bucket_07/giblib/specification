DEF[PORTVERSION]=	1.2.4
DEF[SOVERSION]=		1.0.6
# ----------------------------------------------------------------------------

NAMEBASE=		giblib
VERSION=		${PORTVERSION}
REVISION=		1
KEYWORDS=		graphics
VARIANTS=		standard
SDESC[standard]=	Utility library that includes a wrapper for imlib2
HOMEPAGE=		https://github.com/cbane/giblib
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		GITHUB/cbane:giblib:v${PORTVERSION}
DISTFILE[1]=		generated:main

SPKGS[standard]=	complete primary dev

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		MIT:primary
LICENSE_FILE=		MIT:{{WRKSRC}}/COPYING
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		graphics/giblib

BUILD_DEPENDS=		imlib2:dev:standard
BUILDRUN_DEPENDS=	imlib2:primary:standard

USES=			libtool pkgconfig fbsd10fix
XORG_COMPONENTS=	x11
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		--with-imlib2-prefix={{LOCALBASE}}/bin
			--with-imlib2-exec-prefix={{LOCALBASE}}/bin
SOVERSION=		${SOVERSION}

post-install:
	${STRIP_CMD} ${STAGEDIR}${PREFIX}/lib/libgiblib.so
	${RM} -r ${STAGEDIR}${PREFIX}/doc
