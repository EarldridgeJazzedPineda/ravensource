					perl-Tk:single:532
					perl-Tk-Zinc:single:532
[PERL_532].BUILD_DEPENDS_ON=		perl-Test-Deep:single:532
					perl-Test-Number-Delta:single:532
					perl-Module-Build:single:532
[PERL_534].USES_ON=			perl:534,buildmod,run
[PERL_534].BUILDRUN_DEPENDS_ON=		perl-Astro-FITS-CFITSIO:single:534
					perl-Astro-FITS-Header:single:534
					perl-Tk:single:534
					perl-Tk-Zinc:single:534
[PERL_534].BUILD_DEPENDS_ON=		perl-Test-Deep:single:534
