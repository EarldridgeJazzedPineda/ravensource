DEF[PORTVERSION]=	1.2.2
DEF[XNAME]=		xcursor
DEF[ALTNAME]=		libXcursor
# ----------------------------------------------------------------------------

NAMEBASE=		xorg-${XNAME}
VERSION=		${PORTVERSION}
KEYWORDS=		x11
VARIANTS=		std
SDESC[std]=		X client-side cursor loading library
HOMEPAGE=		https://www.x.org/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		XORG/individual/lib
DISTFILE[1]=		${ALTNAME}-${PORTVERSION}.tar.xz:main
DIST_SUBDIR=		xorg

SPKGS[std]=		set primary dev man

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		MIT:primary
LICENSE_FILE=		MIT:{{WRKSRC}}/COPYING
LICENSE_SCHEME=		solo

EXRUN[dev]=		xorg-xrender:dev:std
			xorg-xfixes:dev:std

USES=			cpe libtool
XORG_COMPONENTS=	x11 xrender xfixes
DISTNAME=		${ALTNAME}-${PORTVERSION}
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		--with-icondir={{PREFIX}}/share/icons
INSTALL_TARGET=		install-strip
CPE_PRODUCT=		libxcursor
CPE_VENDOR=		x
FPC_EQUIVALENT=		x11/libXcursor
