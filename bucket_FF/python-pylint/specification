# platformdirs >=2.2.0
# astroid <=3.3.0-dev0,>=3.2.2
# isort !=5.13.0,<6,>=4.2.5
# mccabe <0.8,>=0.6
# tomlkit >=0.10.1
# typing-extensions >=3.10.0 ; python_version < "3.10"
