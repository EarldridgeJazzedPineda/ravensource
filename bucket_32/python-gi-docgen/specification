NAMEBASE=		python-gi-docgen
VERSION=		${PORTVERSION}
KEYWORDS=		python
VARIANTS=		py39 py310
SDESC[py39]=		Documentation tool for GObject-based libs (3.9)
SDESC[py310]=		Documentation tool for GObject-based libs (3.10)
HOMEPAGE=		https://gitlab.gnome.org/GNOME/gi-docgen
CONTACT=		Python_Automaton[python@ironwolf.systems]

DOWNLOAD_GROUPS=	main
SITES[main]=		PYPIWHL/43/26/ef7e164416b42033cd178ed851a631b8e66aa8bbde926f5575d0c163d89c
DISTFILE[1]=		gi_docgen-${PORTVERSION}-py2.py3-none-any.whl:main

SPKGS[py39]=		single
SPKGS[py310]=		single

OPTIONS_AVAILABLE=	PY39 PY310
OPTIONS_STANDARD=	none
VOPTS[py39]=		PY39=ON PY310=OFF
VOPTS[py310]=		PY39=OFF PY310=ON

# License listed at PyPI
# GPL-3.0-or-later AND Apache-2.0 AND CC0-1.0

GENERATED=		yes
DISTNAME=		gi_docgen-${PORTVERSION}.dist-info

# Requires-Dist extracted from wheel metadata
# Markdown
# MarkupSafe
# Pygments
# jinja2
# toml
# typogrify

[PY39].USES_ON=				python:py39,wheel
[PY39].RUN_DEPENDS_ON=			python-Markdown:single:py39
					python-MarkupSafe:single:py39
					python-Pygments:single:py39
					python-Jinja2:single:py39
					python-toml:single:py39
					python-typogrify:single:py39
[PY310].USES_ON=			python:py310,wheel
[PY310].RUN_DEPENDS_ON=			python-Markdown:single:py310
					python-MarkupSafe:single:py310
					python-Pygments:single:py310
					python-Jinja2:single:py310
					python-toml:single:py310
					python-typogrify:single:py310

post-install:
	${MV} ${STAGEDIR}${PREFIX}/share/pkgconfig/gi-docgen.pc ${STAGEDIR}${PREFIX}/lib/pkgconfig/gi-docgen.pc
	${RMDIR} ${STAGEDIR}${PREFIX}/share/pkgconfig
