REVISION=		2
KEYWORDS=		graphics
VARIANTS=		standard
SDESC[standard]=	OpenGL function pointer management library
HOMEPAGE=		https://github.com/anholt/libepoxy
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
