DEF[PORTVERSION]=	0.28.2
# ------------------------------------------------------------------------

NAMEBASE=		python-pygit2
VERSION=		${PORTVERSION}
KEYWORDS=		python devel
VARIANTS=		py27 py38 py37
SDESC[py27]=		Python bindings for libgit2 (PY 27)
SDESC[py38]=		Python bindings for libgit2 (PY 38)
SDESC[py37]=		Python bindings for libgit2 (PY 37)
HOMEPAGE=		https://github.com/libgit2/pygit2
CONTACT=		Python_Automaton[python@ironwolf.systems]

DOWNLOAD_GROUPS=	main
SITES[main]=		PYPI/p/pygit2
DISTFILE[1]=		pygit2-0.28.2.tar.gz:main

SPKGS[py27]=		single
SPKGS[py38]=		single
SPKGS[py37]=		single

OPTIONS_AVAILABLE=	PY27 PY38 PY37
OPTIONS_STANDARD=	none
VOPTS[py27]=		PY27=ON PY38=OFF PY37=OFF
VOPTS[py38]=		PY27=OFF PY38=ON PY37=OFF
VOPTS[py37]=		PY27=OFF PY38=OFF PY37=ON

# Output of setup.py --license
# GPLv2 with linking exception

GENERATED=		yes

# install_requires extracted from setup.py (using python 2.7)
# cffi
# six
# cffi

DISTNAME=		pygit2-${PORTVERSION}

[PY27].USES_ON=				python:py27
[PY27].BUILDRUN_DEPENDS_ON=		python-cffi:single:py27
					python-six:single:py27

[PY38].USES_ON=				python:py38
[PY38].BUILDRUN_DEPENDS_ON=		python-cffi:single:py38
					python-six:single:py38

[PY37].USES_ON=				python:py37
[PY37].BUILDRUN_DEPENDS_ON=		python-cffi:single:py37
					python-six:single:py37
BUILDRUN_DEPENDS=	libgit2:single:standard
MAKE_ENV=		LIBGIT2={{LOCALBASE}}

post-patch:
	# This version check is always too conservative, causing breakage
	${REINPLACE_CMD} -e '/#error You need a compatible libgit2/d' \
		${WRKSRC}/src/types.h
