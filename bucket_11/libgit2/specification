DEF[PORTVERSION]=	1.7.1
DEF[SOVERSION]=		${PORTVERSION}
DEF[SOMAJOR]=		${SOVERSION:R}
# ----------------------------------------------------------------------------

NAMEBASE=		libgit2
VERSION=		${PORTVERSION}
KEYWORDS=		devel
VARIANTS=		standard
SDESC[standard]=	Library providing Git core methods
HOMEPAGE=		https://libgit2.github.com/
CONTACT=		John_Marino[draco@marino.st]

DOWNLOAD_GROUPS=	main
SITES[main]=		GITHUB/libgit2:libgit2:v${PORTVERSION}
DISTFILE[1]=		generated:main

SPKGS[standard]=	complete primary dev

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		CUSTOM1:primary
LICENSE_NAME=		CUSTOM1:"libgit2 License - GPLv2 with linking exception"
LICENSE_FILE=		CUSTOM1:{{WRKSRC}}/COPYING
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		devel/libgit2

BUILD_DEPENDS=		libssh2:dev:standard
BUILDRUN_DEPENDS=	libssh2:primary:standard

USES=			cpe cmake pkgconfig python:build curl ssl zlib solaris-funcs
SOL_FUNCTIONS=		mkdtemp:tests/clar/sandbox.h
CMAKE_ARGS=		-DUSE_SSH=ON
			-DTHREADSAFE=ON
			-DCURL=ON
PLIST_SUB=		SOVERSION=${SOVERSION}
			SOMAJOR=${SOMAJOR}

post-install:
	${STRIP_CMD} ${STAGEDIR}${PREFIX}/lib/libgit2.${LIBEXT}

