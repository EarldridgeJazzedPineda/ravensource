DEF[PORTVERSION]=	1.15.1
# ------------------------------------------------------------------------

NAMEBASE=		python-pycairo
VERSION=		${PORTVERSION}
KEYWORDS=		python devel
VARIANTS=		py27 py36 py35
SDESC[py27]=		Bindings for cairo graphics library (PY 27)
SDESC[py36]=		Bindings for cairo graphics library (PY 36)
SDESC[py35]=		Bindings for cairo graphics library (PY 35)
HOMEPAGE=		https://www.cairographics.org/pycairo/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		GITHUB/pygobject:pycairo:v${PORTVERSION}
DISTFILE[1]=		generated:main

SPKGS[py27]=		single
SPKGS[py36]=		single
SPKGS[py35]=		single

OPTIONS_AVAILABLE=	PY27 PY36 PY35
OPTIONS_STANDARD=	none
VOPTS[py27]=		PY27=ON PY36=OFF PY35=OFF
VOPTS[py36]=		PY27=OFF PY36=ON PY35=OFF
VOPTS[py35]=		PY27=OFF PY36=OFF PY35=ON

FPC_EQUIVALENT=		graphics/py-cairo

USES=			pkgconfig
GNOME_COMPONENTS=	cairo

[PY27].USES_ON=				python:py27
[PY36].USES_ON=				python:py36
[PY35].USES_ON=				python:py35

post-install:
	${STRIP_CMD} ${STAGEDIR}${PYTHON_SITELIBDIR}/cairo/*.so
