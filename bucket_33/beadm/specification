LICENSE_AWK=		BSD2CLAUSE:"unset LC_ALL"
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		sysutils/beadm

ONLY_FOR_OPSYS=		freebsd
SKIP_BUILD=		yes

do-install:
	${INSTALL_SCRIPT} ${WRKSRC}/beadm ${STAGEDIR}${PREFIX}/sbin
	${INSTALL_MAN} ${WRKSRC}/beadm.8 ${STAGEDIR}${MANPREFIX}/man/man8
