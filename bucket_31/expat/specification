DEF[PORTVERSION]=	2.2.8
DEF[SOVER]=		1.6.10
# ----------------------------------------------------------------------------

NAMEBASE=		expat
VERSION=		${PORTVERSION}
KEYWORDS=		textproc
VARIANTS=		standard
SDESC[standard]=	XML 1.0 parser written in C
HOMEPAGE=		https://sourceforge.net/projects/expat/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		SF/expat/expat/${PORTVERSION}
DISTFILE[1]=		expat-${PORTVERSION}.tar.bz2:main

SPKGS[standard]=	complete static shared

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		MIT:static
LICENSE_FILE=		MIT:{{WRKSRC}}/COPYING
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		textproc/expat2

USES=			libtool
MUST_CONFIGURE=		gnu
INSTALL_TARGET=		install-strip
SOVERSION=		${SOVER}

post-build:
	# assemble PIC library
	(cd ${WRKSRC}/lib/.libs &&\
	 ${AR} -cq libexpat_pic.a *.o &&\
	 ranlib libexpat_pic.a)

post-install:
	# remove installed documents
	${RM} -r ${STAGEDIR}${STD_DOCDIR}

	# install our PIC library
	${INSTALL_DATA} ${WRKSRC}/lib/.libs/libexpat_pic.a \
		${STAGEDIR}${PREFIX}/lib/
