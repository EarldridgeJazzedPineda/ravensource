CONFIGURE_ARGS=		--with-libraries={{PREFIX}}/lib
			--with-includes={{PREFIX}}/include
			--with-openssl
			--with-libxml
			--with-libxslt
			--with-perl
			--with-python
			--without-gssagi
			{{TEMPLATE_ARG}}
			{{UUID_ARG}}
CONFIGURE_ENV=		PTHREAD_LIBS="-lpthread"
