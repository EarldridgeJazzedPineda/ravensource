DEF[PORTVERSION]=	0.0.5
DEF[STAR_VER]=		0.0
# ----------------------------------------------------------------------------

NAMEBASE=		libstaroffice
VERSION=		${PORTVERSION}
KEYWORDS=		textproc
VARIANTS=		standard
SDESC[standard]=	Import filter for StarOffice documents
HOMEPAGE=		https://github.com/fosnola/libstaroffice/wiki
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		http://dev-www.libreoffice.org/src/
DISTFILE[1]=		libstaroffice-${PORTVERSION}.tar.xz:main

SPKGS[standard]=	single

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

FPC_EQUIVALENT=		textproc/libstaroffice

BUILD_DEPENDS=		boost-libraries:rest:python_default
BUILDRUN_DEPENDS=	librevenge:single:standard

USES=			libtool pkgconfig zlib
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		--disable-werror
			--without-docs
INSTALL_TARGET=		install-strip
PLIST_SUB=		VER=${STAR_VER}
SOVERSION=		${PORTVERSION}
