KEYWORDS=		python
VARIANTS=		py310 py311
SDESC[py310]=		Ahead of Time compiler for numeric kernels (3.10)
SDESC[py311]=		Ahead of Time compiler for numeric kernels (3.11)
HOMEPAGE=		https://github.com/serge-sans-paille/pythran
