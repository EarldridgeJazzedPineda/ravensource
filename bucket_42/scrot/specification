DEF[PORTVERSION]=	1.10
# ----------------------------------------------------------------------------

NAMEBASE=		scrot
VERSION=		${PORTVERSION}
KEYWORDS=		graphics
VARIANTS=		standard
SDESC[standard]=	Simple screen capture utility (SCReen shOT)
HOMEPAGE=		https://github.com/resurrecting-open-source-projects/scrot
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		GITHUB/resurrecting-open-source-projects:scrot:${PORTVERSION}
DISTFILE[1]=		generated:main

SPKGS[standard]=	complete primary man

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		MIT:primary
LICENSE_FILE=		MIT:{{WRKSRC}}/COPYING
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		graphics/scrot

BUILD_DEPENDS=		autoconf:single:standard
			automake:single:standard
			autoconf-archive:single:standard
			giblib:dev:standard
			imlib2:dev:standard
BUILDRUN_DEPENDS=	giblib:primary:standard

B_DEPS[linux]=		libbsd:dev:standard
BR_DEPS[linux]=		libbsd:primary:standard

XORG_COMPONENTS=	x11 xfixes xcursor xcomposite xinerama xext
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		--mandir={{MANPREFIX}}/man
# DISTNAME=		scrot-debian-${SCROT_VER}

VAR_OPSYS[sunos]=	LDFLAGS=-lrt

pre-configure:
	(cd ${WRKSRC} && ./autogen.sh)

post-install:
	${RM} -r ${STAGEDIR}${STD_DOCDIR}
