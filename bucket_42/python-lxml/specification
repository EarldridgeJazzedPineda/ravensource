VARIANTS=		py27 py37 py36
SDESC[py27]=		Python bindings for libxml2 and libxslt (PY 27)
SDESC[py37]=		Python bindings for libxml2 and libxslt (PY 37)
SDESC[py36]=		Python bindings for libxml2 and libxslt (PY 36)
HOMEPAGE=		http://lxml.de/
CONTACT=		Python_Automaton[python@ironwolf.systems]

DOWNLOAD_GROUPS=	main
SITES[main]=		PYPI/l/lxml
DISTFILE[1]=		lxml-${PORTVERSION}.tar.gz:main

SPKGS[py27]=		single
SPKGS[py37]=		single
SPKGS[py36]=		single

OPTIONS_AVAILABLE=	PY27 PY37 PY36
