# manually maintained to support python 2.7 variant
DEF[PORTVERSION]=	0.8.0
DEF[PY27_VERSION]=	0.7.1
# ------------------------------------------------------------------------

NAMEBASE=		python-parso
VERSION=		${PORTVERSION}
KEYWORDS=		python
VARIANTS=		py38 py37 py27
SDESC[py38]=		Python Parser (PY38)
SDESC[py37]=		Python Parser (PY37)
SDESC[py27]=		Python Parser (PY27 version ${PY27_VERSION})
HOMEPAGE=		https://github.com/davidhalter/parso
CONTACT=		Python_Automaton[python@ironwolf.systems]

DOWNLOAD_GROUPS=	main
SITES[main]=		PYPI/p/parso
DISTFILE[1]=		parso-${PORTVERSION}.tar.gz:main
DISTFILE[2]=		parso-${PY27_VERSION}.tar.gz:main
DF_INDEX=		1 2

SPKGS[py38]=		single
SPKGS[py37]=		single
SPKGS[py27]=		single

OPTIONS_AVAILABLE=	PY38 PY37 PY27
OPTIONS_STANDARD=	none
VOPTS[py38]=		PY38=ON PY37=OFF PY27=OFF
VOPTS[py37]=		PY38=OFF PY37=ON PY27=OFF
VOPTS[py27]=		PY38=OFF PY37=OFF PY27=ON

# License listed at PyPI
# MIT

# install_requires extracted from setup.py


DISTNAME=		parso
GENERATED=		yes

[PY38].USES_ON=				python:py38
[PY37].USES_ON=				python:py37
[PY27].USES_ON=				python:py27

post-extract-PY27-OFF:
	${MV} ${WRKDIR}/parso-${PORTVERSION} ${WRKDIR}/parso

post-extract-PY27-ON:
	${MV} ${WRKDIR}/parso-${PY27_VERSION} ${WRKDIR}/parso
