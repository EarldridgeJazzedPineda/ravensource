DEF[PORTVERSION]=	3.10.1
# ----------------------------------------------------------------------------

NAMEBASE=		sqlitebrowser
VERSION=		${PORTVERSION}
KEYWORDS=		databases
VARIANTS=		standard
SDESC[standard]=	Visual tool to manage SQLite databases
HOMEPAGE=		http://sqlitebrowser.org/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		GITHUB/sqlitebrowser:sqlitebrowser:v${PORTVERSION}
DISTFILE[1]=		generated:main

SPKGS[standard]=	single

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		MPL:single GPLv3+:single
LICENSE_FILE=		MPL:{{WRKSRC}}/LICENSE
			GPLv3+:{{WRKSRC}}/LICENSE
LICENSE_SCHEME=		dual

FPC_EQUIVALENT=		databases/sqlitebrowser

BUILDRUN_DEPENDS=	qt5-qtbase:single:standard

USES=			cmake sqlite desktop-utils gnome-icons
CMAKE_ARGS=		-DFORCE_INTERNAL_QSCINTILLA:BOOL=ON
			-DFORCE_INTERNAL_ANTLR:BOOL=ON
			-DCMAKE_MODULE_PATH="{{LOCALBASE}}/lib/qt5"

post-patch:
	${REINPLACE_CMD} -e 's|%%DATADIR%%|${PREFIX}/share/${NAMEBASE}|' \
		${WRKSRC}/src/PreferencesDialog.cpp \
		${WRKSRC}/src/Application.cpp
