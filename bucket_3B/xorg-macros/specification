DISTNAME=		util-macros-${PORTVERSION}
MUST_CONFIGURE=		gnu
MAKE_ARGS=		pkgconfigdir="{{PREFIX}}/lib/pkgconfig"
FPC_EQUIVALENT=		devel/xorg-macros

post-install:
	${RM} -r ${STAGEDIR}${PREFIX}/share/util-macros
