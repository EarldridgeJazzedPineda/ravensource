DEF[PORTVERSION]=	EXTRACT_INFO(KDE6_FRAMEWORKS_VERSION)
# ----------------------------------------------------------------------------

NAMEBASE=		kf6-knotifications
VERSION=		${PORTVERSION}
KEYWORDS=		devel
VARIANTS=		standard
SDESC[standard]=	KF6 cross-platform popup notifications library
HOMEPAGE=		https://api.kde.org/frameworks/knotifications/html/index.html
CONTACT=		Michael_Reim[kraileth@elderlinux.org]

DOWNLOAD_GROUPS=	main
SITES[main]=		https://download.kde.org/stable/frameworks/${PORTVERSION:R}/
DISTFILE[1]=		knotifications-${PORTVERSION}.tar.xz:main
DIST_SUBDIR=		kde6

SPKGS[standard]=	complete primary dev nls

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		LGPL20:primary
			LGPL20+:primary
			LGPL21:primary
			LGPL3:primary
LICENSE_FILE=		LGPL20:{{WRKSRC}}/LICENSES/LGPL-2.0-only.txt
			LGPL20+:{{WRKSRC}}/LICENSES/LGPL-2.0-or-later.txt
			LGPL21:{{WRKSRC}}/LICENSES/LGPL-2.1-only.txt
			LGPL3:{{WRKSRC}}/LICENSES/LGPL-3.0-only.txt
LICENSE_TERMS=		primary:{{WRKDIR}}/TERMS
LICENSE_SCHEME=		multi

FPC_EQUIVALENT=		devel/kf6-knotifications

BUILD_DEPENDS=		kf6-extra-cmake-modules:primary:standard
			kf6-kconfig:dev:standard
			libcanberra:dev:standard
			qt6-qtbase:dev:standard
			qt6-qtdeclarative:dev:standard
			qt6-qttools:dev:standard
BUILDRUN_DEPENDS=	kf6-kconfig:primary:standard
			libcanberra:primary:standard
			qt6-qtbase:primary:standard
			qt6-qtdeclarative:primary:standard
			qt6-qttools:primary:standard

USES=			cmake

DISTNAME=		knotifications-${PORTVERSION}
CMAKE_ARGS=		-DCMAKE_PREFIX_PATH:PATH={{PREFIX}}/lib/qt6/cmake
SOVERSION=		${PORTVERSION}

post-extract:
	${ECHO} "Terms extracted from 'src/imageconverter.h':" > ${WRKDIR}/TERMS
	${SED} -n '/ifndef/!p;//q' ${WRKSRC}/src/imageconverter.h >> ${WRKDIR}/TERMS
	${ECHO} "Terms extracted from 'src/notifybyaudio.h':" > ${WRKDIR}/TERMS
	${SED} -n '/ifndef/!p;//q' ${WRKSRC}/src/notifybyaudio.h >> ${WRKDIR}/TERMS
	${ECHO} "Terms extracted from 'src/notifybysnore.h':" > ${WRKDIR}/TERMS
	${SED} -n '/ifndef/!p;//q' ${WRKSRC}/src/notifybysnore.h >> ${WRKDIR}/TERMS

post-stage:
	(cd ${STAGEDIR}${PREFIX}/lib && ${STRIP_CMD} libKF6Notifications.so \
		qt6/qml/org/kde/notification/libknotificationqmlplugin.so)
