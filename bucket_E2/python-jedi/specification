# manually maintained because py27 still supported
DEF[PORTVERSION]=	0.18.0
DEF[PY27_VERSION]=	0.17.2
# ------------------------------------------------------------------------

NAMEBASE=		python-jedi
VERSION=		${PORTVERSION}
KEYWORDS=		python
VARIANTS=		py38 py39 py27
SDESC[py38]=		Static analysis and autocompletion library (PY38)
SDESC[py39]=		Static analysis and autocompletion library (PY39)
SDESC[py27]=		Static analysis and autocompletion library (PY27)
HOMEPAGE=		https://github.com/davidhalter/jedi
CONTACT=		Python_Automaton[python@ironwolf.systems]

DOWNLOAD_GROUPS=	main
SITES[main]=		PYPI/j/jedi
DISTFILE[1]=		jedi-${PORTVERSION}.tar.gz:main
DISTFILE[2]=		jedi-${PY27_VERSION}.tar.gz:main
DF_INDEX=		1 2

SPKGS[py38]=		single
SPKGS[py39]=		single
SPKGS[py27]=		single

OPTIONS_AVAILABLE=	PY38 PY39 PY27
OPTIONS_STANDARD=	none
VOPTS[py38]=		PY38=ON PY39=OFF PY27=OFF
VOPTS[py39]=		PY38=OFF PY39=ON PY27=OFF
VOPTS[py27]=		PY38=OFF PY39=OFF PY27=ON

# License listed at PyPI
# MIT

GENERATED=		yes
DISTNAME=		jedi

# install_requires extracted from setup.py
# parso<0.9.0,>=0.8.0

[PY38].USES_ON=				python:py38,sutools
[PY38].BUILDRUN_DEPENDS_ON=		python-parso:single:py38
[PY39].USES_ON=				python:py39,sutools
[PY39].BUILDRUN_DEPENDS_ON=		python-parso:single:py39
[PY27].USES_ON=				python:py27,sutools
[PY27].BUILDRUN_DEPENDS_ON=		python-parso:single:py27

post-extract-PY27-OFF:
	${MV} ${WRKDIR}/jedi-${PORTVERSION} ${WRKDIR}/jedi

post-extract-PY27-ON:
	${MV} ${WRKDIR}/jedi-${PY27_VERSION} ${WRKDIR}/jedi
