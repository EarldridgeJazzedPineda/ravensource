DEF[PORTVERSION]=	1.2.12
# ----------------------------------------------------------------------------

NAMEBASE=		sdl1_image
VERSION=		${PORTVERSION}
REVISION=		1
KEYWORDS=		graphics
VARIANTS=		standard
SDESC[standard]=	Load images of various formats as SDL surfaces
HOMEPAGE=		https://github.com/libsdl-org/SDL_image
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		https://leaf.dragonflybsd.org/~marino/orphaned-distfiles/
DISTFILE[1]=		SDL_image-${PORTVERSION}.tar.gz:main

SPKGS[standard]=	complete primary dev

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		ZLIB:primary
LICENSE_FILE=		ZLIB:{{WRKSRC}}/COPYING
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		graphics/sdl_image

BUILDRUN_DEPENDS=	WebP:single:standard

USES=			cpe gmake libtool pkgconfig jpeg png tiff
			fbsd10fix mbsdfix
CPE_VENDOR=		sdl
CPE_PRODUCT=		sdl_image
SDL_COMPONENTS=		sdl1
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		--enable-jpg
			--enable-png
			--enable-tif
			--enable-webp
LDFLAGS=		-lm
DISTNAME=		SDL_image-${PORTVERSION}
INSTALL_TARGET=		install-strip

post-install:
	${INSTALL_PROGRAM} ${WRKSRC}/.libs/showimage \
		${STAGEDIR}${PREFIX}/bin
