DEF[PORTVERSION]=	1.8
DEF[XNAME]=		xi
DEF[ALTNAME]=		libXi
# ----------------------------------------------------------------------------

NAMEBASE=		xorg-${XNAME}
VERSION=		${PORTVERSION}
REVISION=		1
KEYWORDS=		x11
VARIANTS=		standard
SDESC[standard]=	X Input extension library
HOMEPAGE=		https://www.x.org/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		XORG/individual/lib
DISTFILE[1]=		${ALTNAME}-${PORTVERSION}.tar.bz2:main
DIST_SUBDIR=		xorg

SPKGS[standard]=	complete primary dev man

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		MIT:primary
LICENSE_FILE=		MIT:{{WRKSRC}}/COPYING
LICENSE_SCHEME=		solo

EXRUN[dev]=		xorg-xfixes:dev:standard
			xorg-xext:dev:standard
			xorg-x11:dev:standard

USES=			cpe libtool
XORG_COMPONENTS=	xorgproto x11 xext xfixes
CPE_VENDOR=		x.org
CPE_PRODUCT=		libxi
DISTNAME=		${ALTNAME}-${PORTVERSION}
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		--disable-docs
			--disable-specs
			--without-xmlto
			--without-fop
			--without-asciidoc
			--without-xsltproc
INSTALL_TARGET=		install-strip
FPC_EQUIVALENT=		x11/libXi
