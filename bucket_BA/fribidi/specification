DEF[PORTVERSION]=	1.0.10
DEF[SOVERSION]=		0.4.0
# ----------------------------------------------------------------------------

NAMEBASE=		fribidi
VERSION=		${PORTVERSION}
KEYWORDS=		converters
VARIANTS=		standard
SDESC[standard]=	Free Implementation of the Unicode BiDi Algorithm
HOMEPAGE=		https://github.com/fribidi/fribidi
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		https://github.com/fribidi/fribidi/releases/download/v${PORTVERSION}/
DISTFILE[1]=		fribidi-${PORTVERSION}.tar.xz:main

SPKGS[standard]=	single

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		LGPL21+:single
LICENSE_FILE=		LGPL21+:{{WRKSRC}}/COPYING
LICENSE_TERMS=		single:{{WRKDIR}}/TERMS
LICENSE_AWK=		TERMS:"^$$"
LICENSE_SOURCE=		TERMS:{{WRKSRC}}/lib/fribidi.h
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		converters/fribidi

USES=			cpe gmake libtool
INSTALL_TARGET=		install-strip
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		--enable-static
			--disable-debug
			--enable-docs=no
CPE_VENDOR=		gnu
SOVERSION=		${SOVERSION}

post-patch:
	${SED} -e 's|%%LOCALBASE%%|${LOCALBASE}|g' < \
		${FILESDIR}/fribidi-config > ${WRKDIR}/fribidi-config

post-install:
	${INSTALL_SCRIPT} ${WRKDIR}/fribidi-config \
		${STAGEDIR}${PREFIX}/bin
