LICENSE_FILE=		CUSTOM1:{{WRKSRC}}/LICENSE-orig.txt
			BSD3CLAUSE:{{WRKSRC}}/LICENSE-bsd.txt
			GPLv3:{{WRKSRC}}/LICENSE-gpl3.txt
LICENSE_TERMS=		single:{{WRKDIR}}/TERMS
