DEF[PORTVERSION]=	4.9
DEF[PATCH_SUBDIRS]=	. doc lib sed
# ----------------------------------------------------------------------------

NAMEBASE=		sed
VERSION=		${PORTVERSION}
KEYWORDS=		textproc
VARIANTS=		standard ravensys
SDESC[standard]=	GNU stream editor
SDESC[ravensys]=	GNU stream editor for sysroot (no nls)
HOMEPAGE=		http://www.gnu.org/software/sed/sed.html
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		GNU/sed
DISTFILE[1]=		sed-${PORTVERSION}.tar.xz:main

SPKGS[standard]=	complete primary nls
SPKGS[ravensys]=	primary

OPTIONS_AVAILABLE=	RAVENSYS
OPTIONS_STANDARD=	none
VOPTS[ravensys]=	RAVENSYS=ON

LICENSE=		GPLv3+:primary
LICENSE_FILE=		GPLv3+:{{WRKSRC}}/COPYING
LICENSE_TERMS=		primary:{{WRKDIR}}/TERMS
LICENSE_AWK=		TERMS:"<config.h>"
LICENSE_SOURCE=		TERMS:{{WRKSRC}}/sed/sed.h
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		textproc/gsed

USES=			cpe charsetfix gmake
CPE_VENDOR=		gnu
INFO=			primary:sed
MUST_CONFIGURE=		gnu

# All platforms except for Darwin build properly
# On Darwin, the programs relink the static libraries and
# programs again during stage phase.  Once fixed, the
# following line can be removed.
# INSTALL_REQ_TOOLCHAIN=	yes

[RAVENSYS].DESCRIPTION=			For ravensys-root - built without NLS
[RAVENSYS].USES_OFF=			gettext
[RAVENSYS].CONFIGURE_ARGS_OFF=		--program-prefix=g
					--enable-nls
[RAVENSYS].CONFIGURE_ARGS_ON=		--disable-nls

post-patch-darwin:
	${REINPLACE_CMD} -e "s|'cr'|'Scr'|" ${WRKSRC}/configure

do-test:
	(cd ${WRKSRC}/testsuite && ${MAKE} check)
