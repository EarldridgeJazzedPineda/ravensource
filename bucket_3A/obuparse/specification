USES=			gmake
MAKE_ARGS=		PREFIX="{{STAGEDIR}}{{PREFIX}}"
INSTALL_TARGET=		install-shared

post-install:
	${STRIP_CMD} ${STAGEDIR}${PREFIX}/lib/libobuparse.so
