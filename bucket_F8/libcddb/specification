DEF[PORTVERSION]=	1.3.2
# ----------------------------------------------------------------------------

NAMEBASE=		libcddb
VERSION=		${PORTVERSION}
KEYWORDS=		audio
VARIANTS=		standard
SDESC[standard]=	CDDB access library
HOMEPAGE=		http://libcddb.sourceforge.net/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		SF/libcddb/libcddb/${PORTVERSION}
DISTFILE[1]=		libcddb-${PORTVERSION}.tar.bz2:main

SPKGS[standard]=	single

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

FPC_EQUIVALENT=		audio/libcddb

BUILD_DEPENDS=		bash:primary:standard

USES=			iconv libtool fbsd10fix
INSTALL_TARGET=		install-strip
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		--without-cdio

pre-configure:
	${REINPLACE_CMD} -e 's|/bin/sh|${LOCALBASE}/bin/bash|' \
		${WRKSRC}/configure
