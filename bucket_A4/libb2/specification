DEF[PORTVERSION]=	0.98.1
DEF[SOVERSION]=		1.0.4
# ----------------------------------------------------------------------------

NAMEBASE=		libb2
VERSION=		${PORTVERSION}
REVISION=		1
KEYWORDS=		devel
VARIANTS=		standard
SDESC[standard]=	BLAKE2: fast secure hashing
HOMEPAGE=		https://blake2.net/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		GITHUB/BLAKE2:libb2:v${PORTVERSION}
DISTFILE[1]=		generated:main

SPKGS[standard]=	single

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		CC0_10:single
LICENSE_FILE=		CC0_10:{{WRKSRC}}/COPYING
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		devel/libb2

USES=			autoreconf libtool pkgconfig
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		--disable-openmp
			--enable-native=no
INSTALL_TARGET=		install-strip
SOVERSION=		${SOVERSION}
SET_DEBUGGING_ON=	yes
OPTIMIZER_LEVEL=	0

post-patch:
	# remove -O3 flags
	${REINPLACE_CMD} -e '/-O3/d' ${WRKSRC}/configure.ac

post-build:
	(cd ${WRKSRC}/src/.libs &&\
	 ${AR} cru libb2_pic.a *.o &&\
	 ranlib libb2_pic.a)

post-install:
	${INSTALL_DATA} ${WRKSRC}/src/.libs/libb2_pic.a \
		${STAGEDIR}${PREFIX}/lib
