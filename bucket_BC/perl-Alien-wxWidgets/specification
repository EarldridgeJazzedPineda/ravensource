[PERL_526].USES_ON=			perl:526,buildmod,run
[PERL_524].USES_ON=			perl:524,buildmod,run
[PERL_526].BUILD_DEPENDS_ON=		perl-LWP-Protocol-https:single:526
					perl-Module-Build:single:526
[PERL_526].BUILDRUN_DEPENDS_ON=		perl-Module-Pluggable:single:526
[PERL_524].BUILD_DEPENDS_ON=		perl-LWP-Protocol-https:single:524
					perl-Module-Build:single:524
[PERL_524].BUILDRUN_DEPENDS_ON=		perl-Module-Pluggable:single:524



BUILDRUN_DEPENDS=	wxWidgets:single:standard
