DEF[PORTVERSION]=	0.42.0
DEF[XNAME]=		pixman
# ----------------------------------------------------------------------------

NAMEBASE=		xorg-${XNAME}
VERSION=		${PORTVERSION}
KEYWORDS=		x11
VARIANTS=		standard
SDESC[standard]=	Low-level pixel manipulation library
HOMEPAGE=		https://www.x.org/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		XORG/individual/lib
DISTFILE[1]=		${XNAME}-${PORTVERSION}.tar.xz:main
DIST_SUBDIR=		xorg

SPKGS[standard]=	single

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		MIT:single
LICENSE_FILE=		MIT:{{WRKSRC}}/COPYING
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		x11/pixman

USES=			cpe libtool perl:build
CPE_VENDOR=		pixman
CPE_PRODUCT=		pixman
DISTNAME=		${XNAME}-${PORTVERSION}
MAKE_ARGS=		SUBDIRS=pixman
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		--disable-gtk
INSTALL_TARGET=		install-strip
SOVERSION=		${PORTVERSION}
