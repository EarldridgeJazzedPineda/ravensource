DEF[PORTVERSION]=	1.16
DEF[XNAME]=		xcb
DEF[ALTNAME]=		libxcb
DEF[DRI3_SOVERSION]=	0.1.0
# ----------------------------------------------------------------------------

NAMEBASE=		xorg-${XNAME}
VERSION=		${PORTVERSION}
REVISION=		1
KEYWORDS=		x11
VARIANTS=		standard
SDESC[standard]=	X protocol C-language Binding (XCB) library
HOMEPAGE=		https://xcb.freedesktop.org/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		https://xcb.freedesktop.org/dist/
			https://www.x.org/releases/individual/lib/
DISTFILE[1]=		${ALTNAME}-${PORTVERSION}.tar.xz:main
DIST_SUBDIR=		xorg

SPKGS[standard]=	complete primary dev man

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		MIT:primary
LICENSE_FILE=		MIT:{{WRKSRC}}/COPYING
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		x11/libxcb

BUILD_DEPENDS=		check:single:standard
			xcb-proto:single:standard

EXRUN[dev]=		xorg-xdmcp:dev:standard
			xorg-xau:dev:standard

USES=			cpe gmake python:build libtool
XORG_COMPONENTS=	xau xdmcp xorgproto
GNOME_COMPONENTS=	libxslt
DISTNAME=		${ALTNAME}-${PORTVERSION}
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		--disable-build-docs
			--without-doxygen
			--enable-xinput
			--enable-xkb
			XPROTO_CFLAGS="-I{{LOCALBASE}}/include"
			XPROTO_LIBS="-L{{LOCALBASE}}/lib"
			XDMCP_CFLAGS="-I{{LOCALBASE}}/include"
			XDMCP_LIBS="-L{{LOCALBASE}}/lib -lXdmcp"
			NEEDED_CFLAGS="-I{{LOCALBASE}}/include"
			NEEDED_LIBS="-L{{LOCALBASE}}/lib -lXau `pkg-config --libs pthread-stubs`"
INSTALL_TARGET=		install-strip
INSTALL_REQ_TOOLCHAIN=	yes
PLIST_SUB=		DRI3_SOVERSION=${DRI3_SOVERSION}
			DRI3_SOMAJOR=${DRI3_SOVERSION:R:R}
CPE_VENDOR=		x
CPE_PRODUCT=		libxcb

post-install:
	${RM} -r ${STAGEDIR}${PREFIX}/share/doc/${ALTNAME}
