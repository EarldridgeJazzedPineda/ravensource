DEF[PORTVERSION]=	6.0.0
# ----------------------------------------------------------------------------

NAMEBASE=		kf6-karchive
VERSION=		${PORTVERSION}
KEYWORDS=		archivers
VARIANTS=		standard
SDESC[standard]=	KF6 library for handling archive formats
HOMEPAGE=		https://api.kde.org/frameworks/karchive/html/index.html
CONTACT=		Michael_Reim[kraileth@elderlinux.org]

DOWNLOAD_GROUPS=	main
SITES[main]=		https://download.kde.org/stable/frameworks/${PORTVERSION:R}/
DISTFILE[1]=		karchive-${PORTVERSION}.tar.xz:main
DIST_SUBDIR=		kde6

SPKGS[standard]=	complete primary dev nls

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		LGPL20+:primary
LICENSE_FILE=		LGPL20+:{{WRKSRC}}/LICENSES/LGPL-2.0-or-later.txt
LICENSE_TERMS=		primary:{{WRKDIR}}/TERMS
LICENSE_SOURCE=		TERMS:{{WRKSRC}}/src/karchive.h
LICENSE_AWK=		TERMS:"ifndef KARCHIVE_H"
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		archivers/kf6-karchive

BUILD_DEPENDS=		kf6-extra-cmake-modules:primary:standard
			qt6-qtbase:dev:standard
			qt6-qttools:dev:standard
BUILDRUN_DEPENDS=	qt6-qtbase:primary:standard
			qt6-qttools:primary:standard

USES=			cmake pkgconfig zlib zstd bz2 xz

DISTNAME=		karchive-${PORTVERSION}
CMAKE_ARGS=		-DCMAKE_PREFIX_PATH:PATH={{PREFIX}}/lib/qt6/cmake
SOVERSION=		${PORTVERSION}

post-stage:
	${STRIP_CMD} ${STAGEDIR}${PREFIX}/lib/libKF6Archive.so
