# Requires-Dist extracted from wheel metadata
# asgiref (<4,>=3.2.10)
# pytz
# sqlparse (>=0.2.2)
# argon2-cffi (>=16.1.0) ; extra == 'argon2'
# bcrypt ; extra == 'bcrypt'

[PY38].USES_ON=				python:py38,wheel
[PY38].BUILD_DEPENDS_ON=		python-pip:single:py38
[PY38].RUN_DEPENDS_ON=			python-asgiref:single:py38
					python-pytz:single:py38
					python-sqlparse:single:py38
[PY37].USES_ON=				python:py37,wheel
[PY37].BUILD_DEPENDS_ON=		python-pip:single:py37
[PY37].RUN_DEPENDS_ON=			python-asgiref:single:py37
					python-pytz:single:py37
					python-sqlparse:single:py37

