DEF[PORTVERSION]=	4.1.2
# ------------------------------------------------------------------------

NAMEBASE=		python-Django
VERSION=		${PORTVERSION}
KEYWORDS=		python
VARIANTS=		py39 py310
SDESC[py39]=		High-level Python Web framework (3.9)
SDESC[py310]=		High-level Python Web framework (3.10)
HOMEPAGE=		https://www.djangoproject.com/
CONTACT=		Python_Automaton[python@ironwolf.systems]

DOWNLOAD_GROUPS=	main
SITES[main]=		PYPIWHL/91/02/786ced9f0b9980670f46f7563f9c5494a24e3dd1920cc7be6cc7ac377389
DISTFILE[1]=		Django-${PORTVERSION}-py3-none-any.whl:main

SPKGS[py39]=		single
SPKGS[py310]=		single

OPTIONS_AVAILABLE=	PY39 PY310
OPTIONS_STANDARD=	none
VOPTS[py39]=		PY39=ON PY310=OFF
VOPTS[py310]=		PY39=OFF PY310=ON

# License listed at PyPI
# BSD-3-Clause

GENERATED=		yes
DISTNAME=		Django-${PORTVERSION}.dist-info

# Requires-Dist extracted from wheel metadata
# asgiref (<4,>=3.5.2)
# sqlparse (>=0.2.2)
# backports.zoneinfo ; python_version < "3.9"
# tzdata ; sys_platform == "win32"
# argon2-cffi (>=19.1.0) ; extra == 'argon2'
# bcrypt ; extra == 'bcrypt'

[PY39].USES_ON=				python:py39,wheel
[PY39].RUN_DEPENDS_ON=			python-asgiref:single:py39
					python-sqlparse:single:py39
					python-tzdata:single:py39
[PY310].USES_ON=			python:py310,wheel
[PY310].RUN_DEPENDS_ON=			python-asgiref:single:py310
					python-sqlparse:single:py310
					python-tzdata:single:py310

USES=			cpe shebangfix
CPE_VENDOR=		djangoproject
CPE_PRODUCT=		django

post-install:
	${SED} -i'' -e 's|/usr/bin/env python|${PYTHON_CMD}|' \
		${STAGEDIR}${PYTHON_SITELIBDIR}/django/conf/project_template/manage.py-tpl
