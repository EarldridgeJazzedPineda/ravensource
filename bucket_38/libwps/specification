DEF[PORTVERSION]=	0.4.14
DEF[SOVERSION]=		4.0.14
DEF[WPS_VER]=		0.4
# ----------------------------------------------------------------------------

NAMEBASE=		libwps
VERSION=		${PORTVERSION}
KEYWORDS=		textproc
VARIANTS=		standard
SDESC[standard]=	Import filter and tools for Microsoft Works files
HOMEPAGE=		https://libwps.sourceforge.net/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		SF/libwps/libwps/libwps-${PORTVERSION}
DISTFILE[1]=		libwps-${PORTVERSION}.tar.xz:main

SPKGS[standard]=	complete primary tools dev

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		LGPL21+:primary MPL:primary
LICENSE_TERMS=		primary:{{WRKDIR}}/TERMS
LICENSE_FILE=		LGPL21+:{{WRKSRC}}/COPYING.LGPL
			MPL:{{WRKSRC}}/COPYING.MPL
LICENSE_AWK=		TERMS:"^$$"
LICENSE_SOURCE=		TERMS:{{WRKSRC}}/src/lib/WPS4.h
LICENSE_SCHEME=		dual

FPC_EQUIVALENT=		textproc/libwps

BUILD_DEPENDS=		boost-libraries:dev:standard
			librevenge:dev:standard
BUILDRUN_DEPENDS=	librevenge:primary:standard

USES=			libtool pkgconfig mbsdfix
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		--disable-werror
			--without-docs
			--with-sharedptr=boost
INSTALL_TARGET=		install-strip
PLIST_SUB=		VER=${WPS_VER}
SOVERSION=		${SOVERSION}
