# Even releases are for production, uneven are development versions
DEF[PORTVERSION]=	1.32.0
DEF[SOVERSION]=		0.3200.0
# ----------------------------------------------------------------------------

NAMEBASE=		libpeas
VERSION=		${PORTVERSION}
KEYWORDS=		devel
VARIANTS=		py310 py39
SDESC[py310]=		GObject-based plugins engine (3.10)
SDESC[py39]=		GObject-based plugins engine (3.9)
HOMEPAGE=		https://wiki.gnome.org/Projects/Libpeas
CONTACT=		Michael_Reim[kraileth@elderlinux.org]

DOWNLOAD_GROUPS=	main
SITES[main]=		GNOME/libpeas/${PORTVERSION:R}/
DISTFILE[1]=		libpeas-${PORTVERSION}.tar.xz:main

SPKGS[py310]=		complete primary python examples nls docs
SPKGS[py39]=		complete primary python examples nls docs

OPTIONS_AVAILABLE=	PY310 PY39
OPTIONS_STANDARD=	none
VOPTS[py310]=		PY310=ON PY39=OFF
VOPTS[py39]=		PY310=OFF PY39=ON

LICENSE=		LGPL21+:primary
LICENSE_FILE=		LGPL21+:{{WRKSRC}}/COPYING
LICENSE_TERMS=		primary:{{WRKDIR}}/TERMS
LICENSE_SOURCE=		TERMS:{{WRKSRC}}/libpeas/peas.h
LICENSE_AWK=		TERMS:"^$$"
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		devel/libpeas

BUILD_DEPENDS=		python-gi-docgen:single:python_default
BUILDRUN_DEPENDS=	gobject-introspection:single:standard

# We don't have very old Lua5.1, so no Lua support for now.
# Libpeas still only supports 5.1 as of 1.32.0. Maybe re-check later.

USES=			cpe meson pkgconfig gtk-doc
			gettext-runtime gettext-tools:build
GNOME_COMPONENTS=	gtk3 intltool introspection pygobject
CPE_VENDOR=		gnome
MESON_ARGS=		-Dlua51=false
			-Dvapi=false
			-Dglade_catalog=false
			-Dintrospection=true
			-Dwidgetry=true
			-Dgtk_doc=true
			-Ddemos=true
			-Dpython3=true
			-Dpython2=false
			-Dlocaledir=lib/locale
INSTALL_TARGET=		install-strip
INSTALL_REQ_TOOLCHAIN=	yes
SOVERSION=		${SOVERSION}

VAR_OPSYS[sunos]=	LDFLAGS=-lintl

[PY310].USES_ON=			python:py310
[PY39].USES_ON=				python:py39

post-patch:
	${REINPLACE_CMD} \
		-e "/python3_dep =/ s|'python3|'python-${PYTHON_VER}|" \
		${WRKSRC}/meson.build

post-install:
	${RM} -r ${STAGEDIR}${PREFIX}/lib/peas-demo/plugins/pythonhello/__pycache__
