# Even releases are for production, uneven are development versions
DEF[PORTVERSION]=	1.24.1
DEF[SOVERSION]=		0.2400.1
# ----------------------------------------------------------------------------

NAMEBASE=		libpeas
VERSION=		${PORTVERSION}
KEYWORDS=		devel
VARIANTS=		py27 py36 py37
SDESC[py27]=		GObject-based plugins engine (PY 27)
SDESC[py36]=		GObject-based plugins engine (PY 36)
SDESC[py37]=		GObject-based plugins engine (PY 37)
HOMEPAGE=		https://wiki.gnome.org/Projects/Libpeas
CONTACT=		Michael_Reim[kraileth@elderlinux.org]

DOWNLOAD_GROUPS=	main
SITES[main]=		GNOME/libpeas/${PORTVERSION:R}/
DISTFILE[1]=		libpeas-${PORTVERSION}.tar.xz:main

SPKGS[py27]=		complete primary python examples docs
SPKGS[py36]=		complete primary python examples docs
SPKGS[py37]=		complete primary python examples docs

OPTIONS_AVAILABLE=	PY27 PY36 PY37
OPTIONS_STANDARD=	none
VOPTS[py27]=		PY27=ON PY36=OFF PY37=OFF
VOPTS[py36]=		PY27=OFF PY36=ON PY37=OFF
VOPTS[py37]=		PY27=OFF PY36=OFF PY37=ON

LICENSE=		LGPL21+:primary
LICENSE_FILE=		LGPL21+:{{WRKSRC}}/COPYING
LICENSE_TERMS=		primary:{{WRKDIR}}/TERMS
LICENSE_SOURCE=		TERMS:{{WRKSRC}}/libpeas/peas.h
LICENSE_AWK=		TERMS:"^$$"
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		devel/libpeas

BUILD_DEPENDS=		gtk-doc:single:standard
RUN_DEPENDS=		gobject-introspection:single:standard

# We don't have Lua5.1, so Lua cannot be supported here.
# Libpeas still supports 5.1 only as of 1.24.0. Maybe re-check later.

USES=			meson pkgconfig
			gettext-runtime gettext-tools:build
GNOME_COMPONENTS=	gtk3 intltool introspection
MESON_ARGS=		-Dlua51=false
			-Dvapi=false
			-Dglade_catalog=false
			-Dintrospection=true
			-Dwidgetry=true
			-Dgtk_doc=true
			-Ddemos=true
			-Dpython3={{P3USED}}
			-Dpython2={{P2USED}}
			-Dlocaledir=lib/locale
INSTALL_TARGET=		install-strip
INSTALL_REQ_TOOLCHAIN=	yes
SOVERSION=		${SOVERSION}

[PY27].USES_ON=				python:py27
[PY36].USES_ON=				python:py36
[PY37].USES_ON=				python:py37

[PY27].BUILD_DEPENDS_ON=		python37:single:standard
[PY36].BUILD_DEPENDS_ON=		python37:single:standard

[PY27].BUILDRUN_DEPENDS_ON=		python-pygobject:primary:py27
[PY36].BUILDRUN_DEPENDS_ON=		python-pygobject:primary:py36
[PY37].BUILDRUN_DEPENDS_ON=		python-pygobject:primary:py37

[PY27].MAKEFILE_ON=			P3USED=false
					P2USED=true
[PY36].MAKEFILE_ON=			P3USED=true
					P2USED=false
[PY37].MAKEFILE_ON=			P3USED=true
					P2USED=false

post-patch-PY37-ON:
	${REINPLACE_CMD} \
		-e "/python3_dep =/ s|'python3'|'python-${PYTHON_VER}'|" \
		${WRKSRC}/meson.build

post-patch-PY36-ON:
	${REINPLACE_CMD} \
		-e "/python3_dep =/ s|'python3'|'python-${PYTHON_VER}'|" \
		${WRKSRC}/meson.build

post-patch-PY27-ON:
	${REINPLACE_CMD} \
		-e "/^python2_dep =/ s|'python2'|'python-${PYTHON_VER}'|" \
		${WRKSRC}/meson.build

post-install:
	${MV} ${STAGEDIR}${PREFIX}/share/gtk-doc/html/libpeas \
		${STAGEDIR}${PREFIX}/share/doc/libpeas
	${RM} -r ${STAGEDIR}${PREFIX}/share/gtk-doc
	${RM} -r ${STAGEDIR}${PREFIX}/lib/peas-demo/plugins/pythonhello/__pycache__
